#include <stdio.h>

int tinh_so_mang(int a[], int n, int k) {
    if (k == 1) {
        for (int i = 1; i < n; ++i)
            if (a[i] != a[0]) return -1;
        return 1;
    }

    int count = 1;
    for (int i = 1; i < n; ++i)
        if (a[i] != a[i - 1]) count++;

    if (count <= k) return 1;

    int phan_du = (count - k) % (k - 1);
    int thuong = (count - k) / (k - 1);
    return thuong + (phan_du != 0) + 1;
}

int main() {
    int t;
    scanf("%d", &t);
    
    while (t--) {
        int n, k, a[105];
        scanf("%d %d", &n, &k);
        for (int i = 0; i < n; ++i)
            scanf("%d", &a[i]);

        int ket_qua = tinh_so_mang(a, n, k);
        printf("%d\n", ket_qua);
    }

    return 0;
}

