#include <stdio.h>

#define MAXN 200005

int a[MAXN];
int pos[MAXN];
char s[MAXN];

int main() {
    int n;
    scanf("%d", &n);

    for (int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
        pos[a[i]] = i;
    }

    scanf("%s", s);

    for (int i = 1; i < n; i++) {
        if (pos[i] > pos[i + 1]) {
            int can_swap = 0;
            for (int j = pos[i + 1]; j < pos[i]; j++) {
                if (s[j] == '1') {
                    can_swap = 1;
                    break;
                }
            }
            if (!can_swap) {
                printf("NO\n");
                return 0;
            }
        }
    }

    printf("YES\n");
    return 0;
}

