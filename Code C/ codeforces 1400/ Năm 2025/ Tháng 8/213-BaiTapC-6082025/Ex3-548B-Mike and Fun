#include <stdio.h>

#define MAX 505

int mat[MAX][MAX];
int streak[MAX];
int n, m, q;

int find_streak(int r) {
    int best = 0, count = 0;
    for (int c = 0; c < m; ++c) {
        count = (mat[r][c] == 1) ? count + 1 : 0;
        if (count > best) best = count;
    }
    return best;
}

void process_query(int r, int c) {
    mat[r][c] ^= 1;
    streak[r] = find_streak(r);

    int res = 0;
    for (int i = 0; i < n; ++i)
        if (streak[i] > res)
            res = streak[i];
    
    printf("%d\n", res);
}

int main() {
    scanf("%d%d%d", &n, &m, &q);

    for (int i = 0; i < n; ++i) {
        for (int j = 0; j < m; ++j)
            scanf("%d", &mat[i][j]);
        streak[i] = find_streak(i);
    }

    for (int i = 0; i < q; ++i) {
        int r, c;
        scanf("%d%d", &r, &c);
        process_query(r - 1, c - 1);
    }

    return 0;
}

