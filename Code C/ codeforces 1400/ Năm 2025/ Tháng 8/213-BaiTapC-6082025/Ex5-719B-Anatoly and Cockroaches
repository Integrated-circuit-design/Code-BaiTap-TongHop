#include <stdio.h>

int max(int a, int b) {
    return a > b ? a : b;
}

int main() {
    int n;
    scanf("%d", &n);
    char s[n + 1];
    scanf("%s", s);

    int chan_sai_mau1 = 0, le_sai_mau1 = 0;
    int chan_sai_mau2 = 0, le_sai_mau2 = 0;

    for (int i = 0; i < n; i++) {
        char c = s[i];
        if (i % 2 == 0 && c != 'b') chan_sai_mau1++;
        if (i % 2 == 1 && c != 'r') le_sai_mau1++;
        if (i % 2 == 0 && c != 'r') chan_sai_mau2++;
        if (i % 2 == 1 && c != 'b') le_sai_mau2++;
    }

    int buoc1 = max(chan_sai_mau1, le_sai_mau1);
    int buoc2 = max(chan_sai_mau2, le_sai_mau2);

    printf("%d\n", buoc1 < buoc2 ? buoc1 : buoc2);

    return 0;
}

