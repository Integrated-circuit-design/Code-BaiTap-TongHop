#include <stdio.h>

int color[100005];

int main() {
    int n, m;
    scanf("%d %d", &n, &m);

    for (int i = 0; i < m; i++) {
        int x, y, z;
        scanf("%d %d %d", &x, &y, &z);

        if (!color[x] && !color[y] && !color[z]) {
            color[x] = 1;
            color[y] = 2;
            color[z] = 3;
        } else {
            int used[4] = {0};
            if (color[x]) used[color[x]] = 1;
            if (color[y]) used[color[y]] = 1;
            if (color[z]) used[color[z]] = 1;

            int a = 0, b = 0;
            for (int c = 1; c <= 3; c++) {
                if (!used[c]) {
                    if (!a) a = c;
                    else b = c;
                }
            }

            if (!color[x]) color[x] = a, a = b;
            if (!color[y]) color[y] = a, a = b;
            if (!color[z]) color[z] = a, a = b;
        }
    }

    for (int i = 1; i <= n; i++) {
        printf("%d ", color[i]);
    }

    printf("\n");
    return 0;
}

