#include <stdio.h>
#include <math.h>

typedef long long ll;

int is_prime(ll x) {
    if (x < 2) return 0;
    for (ll i = 2; i * i <= x; i++)
        if (x % i == 0) return 0;
    return 1;
}

int main() {
    ll q;
    scanf("%lld", &q);

    if (q == 1 || is_prime(q)) {
        printf("1\n0\n");
        return 0;
    }

    ll first = 0, second = 0;
    for (ll i = 2; i * i <= q && second == 0; i++) {
        if (q % i == 0) {
            first = i;
            if (i != q / i)
                second = q / i;
            else
                second = i;
        }
    }

    if (second == 0) {
        printf("2\n");
        return 0;
    }

    if (is_prime(q / first)) {
        printf("1\n%lld\n", q / first);
    } else if (is_prime(first)) {
        printf("1\n%lld\n", first);
    } else if (is_prime(second)) {
        printf("1\n%lld\n", second);
    } else {
        printf("1\n%lld\n", first);
    }

    return 0;
}

