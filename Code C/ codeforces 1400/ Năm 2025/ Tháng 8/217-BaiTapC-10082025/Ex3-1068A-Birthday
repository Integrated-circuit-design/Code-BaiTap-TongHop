#include <stdio.h>

int main() {
    long long N, M, K, L;
    scanf("%lld %lld %lld %lld", &N, &M, &K, &L);

    long long x = 1;
    while (1) {
        long long total = M * x;
        if (total > N) {
            printf("-1\n");
            break;
        }
        if (total >= K + L) {
            printf("%lld\n", x);
            break;
        }
        x++;
    }
    return 0;
}

