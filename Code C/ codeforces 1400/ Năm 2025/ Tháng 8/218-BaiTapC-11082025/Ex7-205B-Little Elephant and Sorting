#include <stdio.h>
#define ll long long

ll a[100005];

int main() {
    int n;
    scanf("%d", &n);
    for (int i = 0; i < n; i++) scanf("%lld", &a[i]);

    ll ans = 0;
    for (int i = 1; i < n; i++) {
        if (a[i] < a[i - 1]) { 
            ans += a[i - 1] - a[i];
            a[i] = a[i - 1];
        }
    }

    printf("%lld\n", ans);
    return 0;
}

