#include <stdio.h>

int main() {
    long long a, x, y;
    scanf("%lld %lld %lld", &a, &x, &y);
    if (y % a == 0 || y == 0) {
        printf("-1\n");
        return 0;
    }
    long long r = y / a;
    long long total_before;
    if (r < 2) {
        total_before = r;
    } else {
        long long full_pairs = (r - 2) / 2;
        total_before = 2 + full_pairs * 3;
        if (r % 2 == 1) total_before += 2;
    }
    int one_cell = (r == 0 || r == 1 || (r >= 2 && r % 2 == 1));
    if (one_cell) {
        if (x * 2 > -a && x * 2 < a)
            printf("%lld\n", total_before + 1);
        else
            printf("-1\n");
    } else {
        if (x == 0 || x <= -a || x >= a)
            printf("-1\n");
        else if (x < 0)
            printf("%lld\n", total_before + 1);
        else
            printf("%lld\n", total_before + 2);
    }
    return 0;
}

