#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    char moves[n + 1];
    scanf("%s", moves);

    int dir = 0;  
    int min_points = 1;

    int x = 0, y = 0;

    for (int i = 0; i < n; i++) {
        char move = moves[i];
        int new_dir;

        if (move == 'L' || move == 'R') new_dir = 1;
        else new_dir = 2;

        if (dir != 0 && dir != new_dir) {
            min_points++;
        }

        dir = new_dir;

        if (move == 'L') x--;
        else if (move == 'R') x++;
        else if (move == 'U') y++;
        else if (move == 'D') y--;
    }

    printf("%d\n", min_points);
    return 0;
}

