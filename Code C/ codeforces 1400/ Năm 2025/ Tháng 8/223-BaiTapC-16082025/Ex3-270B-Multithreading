#include <stdio.h>

#define MAXN 100005

int main() {
    int n;
    scanf("%d", &n);

    int a[MAXN];
    for (int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    int len = 1;
    int i = n - 1;

    while (i > 0 && a[i-1] < a[i]) {
        len++;
        i--;
    }

    int result = n - len;
    printf("%d\n", result);

    return 0;
}

