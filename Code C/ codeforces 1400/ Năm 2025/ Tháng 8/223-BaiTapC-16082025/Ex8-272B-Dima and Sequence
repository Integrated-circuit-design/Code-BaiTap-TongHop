#include <stdio.h>

typedef long long ll;

int main() {
    int n;
    scanf("%d", &n);

    int a;
    long long freq[32] = {0};

    for (int i = 0; i < n; i++) {
        scanf("%d", &a);

        int ones = 0;
        int temp = a;
        while (temp > 0) {
            if (temp & 1) ones++;
            temp >>= 1;
        }

        freq[ones]++;
    }

    ll ans = 0;
    for (int i = 0; i < 32; i++) {
        if (freq[i] > 1) {
            ans += freq[i] * (freq[i] - 1) / 2;
        }
    }

    printf("%I64d\n", ans);
    return 0;
}

