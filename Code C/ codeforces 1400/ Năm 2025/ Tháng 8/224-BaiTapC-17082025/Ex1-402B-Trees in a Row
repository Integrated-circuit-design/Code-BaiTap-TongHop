#include <stdio.h>

int main() {
    int n, k;
    scanf("%d %d", &n, &k);

    int a[1000];
    for(int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    int actionCount = 0;

    for(int i = 0; i < n - 1; i++) {
        int diff = a[i] + k - a[i + 1];
        if(diff != 0) {
            actionCount++;
            if(diff > 0) {
                printf("+ %d %d\n", i + 2, diff);
            } else {
                printf("- %d %d\n", i + 2, -diff);
            }
            a[i + 1] += diff;
        }
    }

    printf("%d\n", actionCount);

    return 0;
}

