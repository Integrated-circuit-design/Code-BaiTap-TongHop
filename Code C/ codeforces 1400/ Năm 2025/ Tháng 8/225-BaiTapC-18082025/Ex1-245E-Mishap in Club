#include <stdio.h>
#include <string.h>

int main() {
    char log[305];
    scanf("%s", log);
    int n = strlen(log);

    int balance = 0;
    int min_needed = 0;

    for (int i = 0; i < n; i++) {
        if (log[i] == '+') {
            balance++;
            if (balance > min_needed)
                min_needed = balance;
        } else {
            balance--;
            if (balance < 0) {
                min_needed++;
                balance = 0;
            }
        }
    }

    printf("%d\n", min_needed);
    return 0;
}

