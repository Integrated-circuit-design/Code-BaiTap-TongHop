#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    if (!(n % 4 == 0 || n % 4 == 1)) {
        printf("-1\n");
        return 0;
    }

    if (n % 4 == 1) {
        int mid = (n + 1) / 2;
        for (int i = 1; i < mid; i += 2) {
            printf("%d %d %d %d ", i+1, n-i+1, n-i, i);
        }
        printf("%d\n", mid);
    } else {
        for (int i = 1; i <= n/2; i += 2) {
            printf("%d %d %d %d ", i+1, n-i+1, n-i, i);
        }
        printf("\n");
    }
    return 0;
}

