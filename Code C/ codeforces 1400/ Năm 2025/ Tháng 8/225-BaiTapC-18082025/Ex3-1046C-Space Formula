#include <stdio.h>
#include <stdlib.h>

typedef long long ll;

int cmp_desc(const void *a, const void *b) {
    ll x = *(const ll*)a, y = *(const ll*)b;
    if (x > y) return -1;
    if (x < y) return 1;
    return 0;
}

int main() {
    int N, D;
    scanf("%d %d", &N, &D);
    D--;

    ll S[200005], P[200005];
    for (int i = 0; i < N; i++) scanf("%lld", &S[i]);
    for (int i = 0; i < N; i++) scanf("%lld", &P[i]);

    ll target = S[D] + P[0];

    qsort(P+1, N-1, sizeof(ll), cmp_desc);

    ll final[200005];
    int idx = 1;
    for (int i = 0; i < N; i++) {
        if (i == D) continue;
        final[i] = S[i] + P[idx++];
    }
    final[D] = target;

    int overtakers = 0;
    for (int i = 0; i < N; i++) {
        if (i == D) continue;
        if (final[i] > target) overtakers++;
    }

    int bestRank = 1 + overtakers;
    printf("%d\n", bestRank);

    return 0;
}

