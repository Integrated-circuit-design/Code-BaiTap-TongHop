#include <stdio.h>

typedef long long ll;

void sort_desc(ll arr[], int n) {
    for (int i = 0; i < n; i++) {
        for (int j = i + 1; j < n; j++) {
            if (arr[j] > arr[i]) {
                ll tmp = arr[i];
                arr[i] = arr[j];
                arr[j] = tmp;
            }
        }
    }
}

int main() {
    int n, m;
    scanf("%d %d", &n, &m);

    ll price[105], auction[35];
    int mark[105] = {0};

    for (int i = 0; i < n; i++) scanf("%lld", &price[i]);

    for (int i = 0; i < m; i++) {
        int id;
        scanf("%d", &id);
        mark[id - 1] = 1;
    }

    ll total = 0;
    int k = 0;

    for (int i = 0; i < n; i++) {
        if (mark[i]) auction[k++] = price[i];
        else total += price[i];
    }

    sort_desc(auction, k);

    for (int i = 0; i < k; i++) {
        if (total > auction[i]) {
            int remain = k - i;
            for (int j = 0; j < remain; j++) total *= 2;
            break;
        } else {
            total += auction[i];
        }
    }

    printf("%lld\n", total);
    return 0;
}

