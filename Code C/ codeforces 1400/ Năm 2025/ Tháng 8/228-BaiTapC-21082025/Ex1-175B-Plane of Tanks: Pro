Xoá bỏ Comment cho Code sau:
#include <stdio.h>
#include <string.h>

int main() {
    int n;
    scanf("%d", &n);

    char names[1000][11];   // Lưu tên người chơi
    int scores[1000];       // Lưu điểm cao nhất của người chơi
    int count = 0;          // Số người chơi duy nhất

    for (int i = 0; i < n; i++) {
        char name[11];
        int score;
        scanf("%s %d", name, &score);

        int found = -1;
        // Tìm xem người chơi đã có chưa
        for (int j = 0; j < count; j++) {
            if (strcmp(names[j], name) == 0) {
                found = j;
                break;
            }
        }

        if (found == -1) {
            // Người chơi mới
            strcpy(names[count], name);
            scores[count] = score;
            count++;
        } else {
            // Người chơi đã có, cập nhật điểm cao nhất
            if (score > scores[found])
                scores[found] = score;
        }
    }

    printf("%d\n", count);

    // Phân loại
    for (int i = 0; i < count; i++) {
        int better = 0;
        for (int j = 0; j < count; j++) {
            if (scores[j] > scores[i])
                better++;
        }

        double percent = (double)better / count * 100;

        if (percent > 50) printf("%s noob\n", names[i]);
        else if (percent > 20) printf("%s random\n", names[i]);
        else if (percent > 10) printf("%s average\n", names[i]);
        else if (percent > 1)  printf("%s hardcore\n", names[i]);
        else                  printf("%s pro\n", names[i]);
    }

    return 0;
}

