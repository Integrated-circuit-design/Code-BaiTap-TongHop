#include <stdio.h>
#include <limits.h>

#define MAXN 300005

long long a[MAXN];
long long prefix[MAXN+1];
int lastPos[2 * 1000000000 + 5];

int main() {
    int n;
    scanf("%d", &n);

    for(int i=0;i<n;i++) scanf("%lld",&a[i]);

    prefix[0] = 0;
    for(int i=0;i<n;i++) prefix[i+1] = prefix[i]+a[i];

    for(int i=0;i<2*1000000000+5;i++) lastPos[i]=-1;

    long long maxSum = LLONG_MIN;
    int bestL=0, bestR=1;

    for(int i=0;i<n;i++){
        int idx = (int)(a[i]+1000000000);
        if(lastPos[idx]!=-1){
            int l = lastPos[idx];
            int r = i;
            if(r-l+1>=2){
                long long sum = prefix[r+1]-prefix[l];
                if(sum>maxSum){
                    maxSum=sum;
                    bestL=l;
                    bestR=r;
                }
            }
        }else{
            lastPos[idx]=i;
        }
    }

    int k = bestL + (n-bestR-1);
    printf("%lld %d\n",maxSum,k);

    for(i

