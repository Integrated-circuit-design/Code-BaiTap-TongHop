#include <stdio.h>
#include <string.h>

int min(int a, int b) { return a < b ? a : b; }

int main() {
    int t;
    scanf("%d", &t);

    while(t--) {
        int n, k1, k2;
        scanf("%d %d %d", &n, &k1, &k2);

        char s[n+1];
        scanf("%s", s);

        long long total = 0;
        int prev = 0;

        for(int i = 0; i < n; i++) {
            int current = 0;
            if(s[i] == '1') {
                current = min(k1, k2 - prev);
                if(current < 0) current = 0;
            }
            total += current;
            prev = current;
        }

        printf("%lld\n", total);
    }

    return 0;
}

