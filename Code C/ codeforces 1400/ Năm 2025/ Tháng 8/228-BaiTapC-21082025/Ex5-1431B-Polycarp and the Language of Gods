#include <stdio.h>
#include <string.h>

int count_underlines(char s[]) {
    int n = strlen(s);
    int count = 0;
    for (int i = 0; i < n; i++) {
        if (s[i] == 'w') {
            count++;
        } else if (s[i] == 'v' && i + 1 < n && s[i + 1] == 'v') {
            count++;
            i++;
        }
    }
    return count;
}

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        char s[101];
        scanf("%s", s);
        printf("%d\n", count_underlines(s));
    }

    return 0;
}

