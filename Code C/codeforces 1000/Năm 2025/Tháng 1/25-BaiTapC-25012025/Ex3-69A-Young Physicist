#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int x_total = 0, y_total = 0, z_total = 0;
    
    for (int i = 0; i < n; i++) {
        int x, y, z;
        scanf("%d %d %d", &x, &y, &z);

        x_total += x;
        y_total += y;
        z_total += z;
    }

    if (x_total == 0 && y_total == 0 && z_total == 0) {
        printf("YES\n");
    } else {
        printf("NO\n");
    }

    return 0;
}

