#include <stdio.h>

int main() {
    int n, a, b;
    
    scanf("%d %d %d", &n, &a, &b);
    
    int lower_bound = a + 1;
    int upper_bound = n - b;
    
    if (lower_bound > upper_bound) {
        printf("0\n");
    } else {
        printf("%d\n", upper_bound - lower_bound + 1);
    }
    
    return 0;
}

