#include <stdio.h>

void tinhSoOMauXanh(int n, int m) {
    int so_o_to_mau = (n * m + 1) / 2;
    printf("%d\n", so_o_to_mau);
}

int main() {
    int t;
    scanf("%d", &t);

    for (int i = 0; i < t; i++) {
        int n, m;
        scanf("%d %d", &n, &m);
        tinhSoOMauXanh(n, m);
    }

    return 0;
}

