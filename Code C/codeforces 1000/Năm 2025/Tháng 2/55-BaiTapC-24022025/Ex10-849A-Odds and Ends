#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);
    
    int arr[101];
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    
    if (n % 2 == 1) {
        if (arr[0] % 2 == 1 && arr[n - 1] % 2 == 1) {
            puts("Yes");
        } else {
            puts("No");
        }
    } else {
        puts("No");
    }
    
    return 0;
}

