#include <stdio.h>

int main() {
    int a, b, c;
    scanf("%d %d %d", &a, &b, &c);
    
    int du_lieu_tai_duoc = 0;
    int thoi_gian_cho = 0;
    
    while (du_lieu_tai_duoc < a * c) {
        du_lieu_tai_duoc += b;
        thoi_gian_cho++;
    }
    
    printf("%d\n", thoi_gian_cho - 1);
    return 0;
}

