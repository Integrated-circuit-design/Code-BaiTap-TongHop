#include <stdio.h>
#include <math.h>

int main() {
    int x1, y1, x2, y2;
    scanf("%d %d", &x1, &y1);
    scanf("%d %d", &x2, &y2);

    int deltaX = abs(x1 - x2);
    int deltaY = abs(y1 - y2);

    int perimeter = (deltaX + 1 + deltaY + 1) * 2;

    printf("%d\n", perimeter);

    return 0;
}

