#include <stdio.h>

int main() {
    int a, b;
    scanf("%d %d", &a, &b);
    
    int time = 0;
    
    while (a > 0 && b > 0) {
        if (a > b) {
            a -= 2;
            b += 1;
        } else {
            b -= 2;
            a += 1;
        }
        time++;
    }
    
    printf("%d\n", time);
    return 0;
}

