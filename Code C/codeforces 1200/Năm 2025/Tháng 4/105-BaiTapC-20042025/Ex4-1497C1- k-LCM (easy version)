#include <stdio.h>

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n, k;
        scanf("%d %d", &n, &k);

        if (n % 3 == 0) {
            printf("%d %d %d\n", n / 3, n / 3, n / 3);
        } else if (n % 3 == 1) {
            printf("1 %d %d\n", (n - 1) / 2, (n - 1) / 2);
        } else {
            printf("2 %d %d\n", (n - 2) / 2, (n - 2) / 2);
        }
    }

    return 0;
}

