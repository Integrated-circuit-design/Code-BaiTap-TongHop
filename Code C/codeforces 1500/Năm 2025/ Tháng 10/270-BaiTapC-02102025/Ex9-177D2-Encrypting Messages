#include <stdio.h>

int main() {
    int n, m, c;
    scanf("%d %d %d", &n, &m, &c);

    int a[n], b[m];
    int tmp[n];

    for (int i = 0; i < n; i++) scanf("%d", &a[i]);
    for (int i = 0; i < m; i++) scanf("%d", &b[i]);

    for (int i = 0; i < n; i++) tmp[i] = a[i];

    for (int step = 0; step <= n - m; step++) {
        for (int j = 0; j < m; j++) {
            tmp[step + j] = (tmp[step + j] + b[j]) % c;
        }
    }

    for (int i = 0; i < n; i++) {
        printf("%d%c", tmp[i], i == n - 1 ? '\n' : ' ');
    }

    return 0;
}

