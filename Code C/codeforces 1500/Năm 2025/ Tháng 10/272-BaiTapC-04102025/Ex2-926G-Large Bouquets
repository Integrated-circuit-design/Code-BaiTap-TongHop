#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int odd_count = 0;
    int even_count = 0;

    for (int i = 0; i < n; i++) {
        int x;
        scanf("%d", &x);
        if (x % 2 == 0)
            even_count++;
        else
            odd_count++;
    }

    int result = 0;

    int min_pair = odd_count < even_count ? odd_count : even_count;
    result += min_pair;
    odd_count -= min_pair;
    even_count -= min_pair;

    while (odd_count >= 3) {
        odd_count -= 3;
        result++;
    }

    printf("%d\n", result);

    return 0;
}

