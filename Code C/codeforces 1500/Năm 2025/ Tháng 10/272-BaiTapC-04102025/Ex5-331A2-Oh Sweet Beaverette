#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    long long trees[n];
    for (int i = 0; i < n; i++) scanf("%lld", &trees[i]);

    int first_pos[n], last_pos[n];
    for (int i = 0; i < n; i++) first_pos[i] = last_pos[i] = -1;

    long long max_sum = -1000000000000000000LL;
    int best_start = 0, best_end = 1;

    for (int i = 0; i < n; i++) {
        int found = -1;
        for (int j = 0; j < i; j++) {
            if (trees[j] == trees[i]) {
                found = j;
                break;
            }
        }
        if (found != -1) {
            long long sum = 0;
            for (int k = found; k <= i; k++) sum += trees[k];

            if (sum > max_sum) {
                max_sum = sum;
                best_start = found;
                best_end = i;
            }
        }
    }

    int cut_count = best_start + (n - best_end - 1);
    printf("%lld %d\n", max_sum, cut_count);

    for (int i = 0; i < best_start; i++) printf("%d ", i+1);
    for (int i = best_end + 1; i < n; i++) printf("%d ", i+1);
    printf("\n");

    return 0;
}

