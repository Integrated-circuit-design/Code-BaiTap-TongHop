#include <stdio.h>

int check(long long n, long long a, long long b, long long cur) {
    if (cur > n) return 0;
    if ((n - cur) % b == 0) return 1;
    if (a == 1) return 0;
    return check(n, a, b, cur * a);
}

int main() {
    int t;
    scanf("%d", &t);
    while (t--) {
        long long n, a, b;
        scanf("%lld %lld %lld", &n, &a, &b);

        int ok;
        if (a == 1) {
            ok = ((n - 1) % b == 0);
        } else {
            ok = check(n, a, b, 1);
        }

        printf(ok ? "Yes\n" : "No\n");
    }
    return 0;
}

