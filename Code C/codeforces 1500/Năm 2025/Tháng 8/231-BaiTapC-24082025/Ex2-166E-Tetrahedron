#include <stdio.h>
#define MOD 1000000007

int main() {
    int n;
    scanf("%d", &n);

    static long long dp[10000005][2];

    dp[0][0] = 1;
    dp[0][1] = 0;

    for (int i = 1; i <= n; i++) {
        dp[i][0] = dp[i - 1][1] % MOD;
        dp[i][1] = (3 * dp[i - 1][0] + 2 * dp[i - 1][1]) % MOD;
    }

    printf("%lld\n", dp[n][0]);
    return 0;
}

