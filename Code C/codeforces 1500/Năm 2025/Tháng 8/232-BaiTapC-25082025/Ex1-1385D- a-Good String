#include <stdio.h>

int needChange(char *s, int l, int r, char c) {
    int res = 0;
    for (int i = l; i < r; i++) {
        if (s[i] != c) res++;
    }
    return res;
}

int goodString(char *s, int l, int r, char c) {
    int len = r - l;
    if (len == 1) {
        return (s[l] == c ? 0 : 1);
    }

    int mid = (l + r) / 2;

    int way1 = needChange(s, l, mid, c) + goodString(s, mid, r, c + 1);
    int way2 = needChange(s, mid, r, c) + goodString(s, l, mid, c + 1);

    return (way1 < way2 ? way1 : way2);
}

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n;
        char s[150000];
        scanf("%d", &n);
        scanf("%s", s);

        int ans = goodString(s, 0, n, 'a');
        printf("%d\n", ans);
    }

    return 0;
}

