#include <stdio.h>

#define MAXN 200005
int arr[MAXN];

int is_sorted(int n) {
    for (int i = 1; i <= n; i++) {
        if (arr[i] != i) return 0;
    }
    return 1;
}

int min_swaps(int n) {
    if (is_sorted(n)) return 0;

    int left = 1, right = n;
    while (left <= n && arr[left] == left) left++;
    while (right >= 1 && arr[right] == right) right--;

    for (int i = left; i <= right; i++) {
        if (arr[i] == i) return 2;
    }
    return 1;
}

int main() {
    int t;
    scanf("%d", &t);
    while (t--) {
        int n;
        scanf("%d", &n);
        for (int i = 1; i <= n; i++) {
            scanf("%d", &arr[i]);
        }
        printf("%d\n", min_swaps(n));
    }
    return 0;
}

