#include <stdio.h>

#define MOD 998244353
#define MAXN 2005

long long dp[MAXN][MAXN];

int main() {
    int n, m, k;
    scanf("%d %d %d", &n, &m, &k);

    dp[1][0] = m;

    for (int i = 2; i <= n; i++) {
        for (int j = 0; j <= k; j++) {
            dp[i][j] = dp[i-1][j] % MOD;
            if (j > 0)
                dp[i][j] = (dp[i][j] + dp[i-1][j-1] * (m-1) % MOD) % MOD;
        }
    }

    printf("%lld\n", dp[n][k]);
    return 0;
}

