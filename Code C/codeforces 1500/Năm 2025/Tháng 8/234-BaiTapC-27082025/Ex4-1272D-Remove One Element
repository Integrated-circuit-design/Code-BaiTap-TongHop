#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);
    
    int a[n+2];
    for(int i = 0; i < n; i++) scanf("%d", &a[i]);

    int max_len = 1;
    int len = 1;

    for(int i = 1; i < n; i++) {
        if(a[i] > a[i-1]) len++;
        else len = 1;
        if(len > max_len) max_len = len;
    }

    for(int i = 1; i < n-1; i++) {
        if(a[i-1] < a[i+1]) {
            int left_len = 1;
            int j = i-1;
            while(j > 0 && a[j] > a[j-1]) j--;
            left_len = i - j;

            int right_len = 1;
            j = i+1;
            while(j < n-1 && a[j] < a[j+1]) j++;
            right_len = j - i + 1;

            int total_len = left_len + right_len;
            if(total_len > max_len) max_len = total_len;
        }
    }

    printf("%d\n", max_len);
    return 0;
}

