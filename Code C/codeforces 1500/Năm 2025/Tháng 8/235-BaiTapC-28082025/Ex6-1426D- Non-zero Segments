#include <stdio.h>
#include <stdlib.h>

typedef long long ll;

int main() {
    int n;
    scanf("%d", &n);

    ll *a = (ll*)malloc(n * sizeof(ll));
    for (int i = 0; i < n; i++)
        scanf("%lld", &a[i]);

    ll pref = 0;
    ll lastReset = 0;
    int ans = 0;

    for (int i = 0; i < n; i++) {
        pref += a[i];
        if (pref - lastReset == 0) {
            ans++;
            lastReset = pref;
        }
    }

    printf("%d\n", ans);

    free(a);
    return 0;
}

