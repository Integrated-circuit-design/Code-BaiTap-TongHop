#include <stdio.h>

#define MAXK 1005

int main() {
    int t;
    scanf("%d", &t);
    while (t--) {
        int n, k;
        scanf("%d %d", &n, &k);

        long long base = 0;
        static int cnt[MAXK];
        for (int i = 0; i < k; i++) cnt[i] = 0;

        for (int i = 0; i < n; i++) {
            long long x;
            scanf("%lld", &x);
            base += x / k;
            cnt[x % k]++;
        }

        long long extra = 0;

        for (int r = 1; r < (k + 1) / 2; r++) {
            int take = (cnt[r] < cnt[k - r]) ? cnt[r] : cnt[k - r];
            extra += take;
            cnt[r] -= take;
            cnt[k - r] -= take;
        }

        extra += cnt[0] / 2;

        if (k % 2 == 0) {
            extra += cnt[k/2] / 2;
        }

        printf("%lld\n", base + extra);
    }
    return 0;
}

