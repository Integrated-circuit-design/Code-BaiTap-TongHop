#include <stdio.h>

#define MAXN 1005

int n, m;
int a[MAXN], b[MAXN];

int impossible() {
    for (int i = 0; i < n; i++) {
        if (a[i] == 1 || b[i] == 1) return 1;
    }
    return 0;
}

int main() {
    scanf("%d", &n);
    scanf("%d", &m);
    for (int i = 0; i < n; i++) scanf("%d", &a[i]);
    for (int i = 0; i < n; i++) scanf("%d", &b[i]);

    if (impossible()) {
        printf("-1\n");
        return 0;
    }

    long double mass = (long double)m;

    mass = mass * b[0] / (b[0] - 1.0L);

    for (int i = n - 1; i >= 1; i--) {
        mass = mass * a[i] / (a[i] - 1.0L);
        mass = mass * b[i] / (b[i] - 1.0L);
    }

    mass = mass * a[0] / (a[0] - 1.0L);

    long double fuel = mass - (long double)m;
    printf("%.10Lf\n", fuel);

    return 0;
}

