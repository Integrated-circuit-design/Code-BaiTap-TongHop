#include <stdio.h>

void case_k0(int n) {
    for (int i = 0; i < n/2; i++)
        printf("%d %d\n", i, n-1-i);
}

void case_kn1(int n) {
    if (n == 4) {
        puts("-1");
        return;
    }
    printf("%d %d\n", n-1, n-2);
    printf("1 3\n");
    printf("0 %d\n", n-4);
    for (int i = 2; i < n/2; i++) {
        if (i == 3) continue;
        printf("%d %d\n", i, n-1-i);
    }
}

void case_general(int n, int k) {
    printf("0 %d\n", n-1-k);
    printf("%d %d\n", k, n-1);
    for (int i = 1; i < n/2; i++) {
        if (i == k || i == n-1-k) continue;
        printf("%d %d\n", i, n-1-i);
    }
}

int main() {
    int t;
    scanf("%d", &t);
    while (t--) {
        int n, k;
        scanf("%d %d", &n, &k);
        if (k == 0) case_k0(n);
        else if (k == n-1) case_kn1(n);
        else case_general(n, k);
    }
    return 0;
}

