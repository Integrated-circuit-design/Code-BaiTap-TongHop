#include <stdio.h>
#include <string.h>

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        char s[200005];
        scanf("%s", s);
        int n = strlen(s);
        int coins = 0;

        for (int i = 0; i < n - 1; i++) {
            if (s[i] == 'A' && s[i+1] == 'B') {
                coins++;
            } else if (s[i] == 'B' && s[i+1] == 'A') {
                coins++;
            }
        }

        printf("%d\n", coins);
    }
    return 0;
}

