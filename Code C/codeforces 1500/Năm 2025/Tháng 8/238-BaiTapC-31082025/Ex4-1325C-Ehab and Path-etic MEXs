#include <stdio.h>

#define MAXN 100005

typedef struct {
    int a, b;
    int label;
} Edge;

Edge edges[MAXN];
int deg[MAXN];

int main() {
    int n;
    scanf("%d", &n);

    for (int i = 0; i < n - 1; i++) {
        scanf("%d %d", &edges[i].a, &edges[i].b);
        deg[edges[i].a]++;
        deg[edges[i].b]++;
        edges[i].label = -1;
    }

    int pivot = -1;
    for (int i = 1; i <= n; i++) {
        if (deg[i] >= 3) {
            pivot = i;
            break;
        }
    }

    if (pivot == -1) {
        for (int i = 0; i < n - 1; i++) {
            edges[i].label = i;
        }
    } else {
        int lab = 0;
        for (int i = 0; i < n - 1 && lab < 3; i++) {
            if (edges[i].a == pivot || edges[i].b == pivot) {
                edges[i].label = lab++;
            }
        }
        for (int i = 0; i < n - 1; i++) {
            if (edges[i].label == -1) {
                edges[i].label = lab++;
            }
        }
    }

    for (int i = 0; i < n - 1; i++) {
        printf("%d\n", edges[i].label);
    }
    return 0;
}

