#include <stdio.h>
#include <string.h>

int adj[26][26];
int seen[26];
int visited[26];

void dfs(int u) {
    visited[u] = 1;
    for (int v = 0; v < 26; v++) {
        if (adj[u][v] && !visited[v]) {
            dfs(v);
        }
    }
}

int main() {
    int n;
    scanf("%d", &n);

    memset(adj, 0, sizeof(adj));
    memset(seen, 0, sizeof(seen));
    memset(visited, 0, sizeof(visited));

    char s[55];
    for (int i = 0; i < n; i++) {
        scanf("%s", s);
        int len = strlen(s);

        for (int j = 0; j < len; j++) {
            seen[s[j] - 'a'] = 1;
        }

        for (int j = 0; j < len; j++) {
            for (int k = j + 1; k < len; k++) {
                int a = s[j] - 'a';
                int b = s[k] - 'a';
                adj[a][b] = adj[b][a] = 1;
            }
        }
    }

    int ans = 0;
    for (int i = 0; i < 26; i++) {
        if (seen[i] && !visited[i]) {
            dfs(i);
            ans++;
        }
    }

    printf("%d\n", ans);
    return 0;
}

