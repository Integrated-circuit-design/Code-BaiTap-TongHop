#include <stdio.h>

#define MAXN 200005

int stack[MAXN];
int top;

int main() {
    int t;
    scanf("%d", &t);
    while (t--) {
        int n;
        scanf("%d", &n);
        int a[n+1];
        for (int i = 0; i < n; i++) {
            scanf("%d", &a[i]);
        }

        top = -1;
        int removed = 0;

        for (int i = 0; i < n; i++) {
            if (top == -1 || a[i] != stack[top]) {
                stack[++top] = a[i];
            } else {
                int color = a[i];
                int count = 0;
                while (top >= 0 && stack[top] == color) {
                    top--;
                    count++;
                }
                removed += count + 1;
            }
        }

        printf("%d\n", removed);
    }

    return 0;
}

