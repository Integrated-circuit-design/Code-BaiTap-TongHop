#include <stdio.h>
#include <stdlib.h>

#define MAXN 200000

long long a[MAXN];
long long b[MAXN];

int cmp(const void *x, const void *y) {
    long long xx = *(long long*)x;
    long long yy = *(long long*)y;
    if(xx < yy) return -1;
    if(xx > yy) return 1;
    return 0;
}

int main() {
    int n, m;
    scanf("%d %d", &n, &m);

    for(int i = 0; i < n; i++) scanf("%lld", &a[i]);

    qsort(a, n, sizeof(long long), cmp);

    for(int i = 0; i < n; i++) {
        b[i] = 1;
        if(i >= m) {
            b[i] = b[i - m] + 1;
        }
    }

    long long total = 0;
    for(int i = 0; i < n; i++) {
        total += a[i] * b[i];
        printf("%lld", total);
        if(i != n-1) printf(" ");
    }
    printf("\n");

    return 0;
}

