#include <stdio.h>
#include <stdlib.h>

#define ll long long

int main() {
    int t;
    scanf("%d", &t);

    while(t--) {
        int n;
        scanf("%d", &n);
        ll a[n];

        for(int i = 0; i < n; i++) scanf("%lld", &a[i]);

        ll neighbors[2*n];
        int cnt = 0;

        for(int i = 0; i < n; i++) {
            if(a[i] == -1) continue;

            if(i > 0 && a[i-1] == -1) neighbors[cnt++] = a[i];
            if(i < n-1 && a[i+1] == -1) neighbors[cnt++] = a[i];
        }

        ll minNeighbor = neighbors[0], maxNeighbor = neighbors[0];

        for(int i = 1; i < cnt; i++) {
            if(neighbors[i] < minNeighbor) minNeighbor = neighbors[i];
            if(neighbors[i] > maxNeighbor) maxNeighbor = neighbors[i];
        }

        ll k = (minNeighbor + maxNeighbor) / 2;

        ll m = 0;
        for(int i = 0; i < n-1; i++) {
            ll x = a[i], y = a[i+1];
            if(x == -1) x = k;
            if(y == -1) y = k;

            ll diff = llabs(x - y);
            if(diff > m) m = diff;
        }

        printf("%lld %lld\n", m, k);
    }

    return 0;
}

