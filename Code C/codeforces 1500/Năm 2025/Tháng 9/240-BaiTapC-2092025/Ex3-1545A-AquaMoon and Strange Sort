#include <stdio.h>
#include <stdlib.h>

#define MAX 100005

int cmp(const void *a, const void *b) {
    return (*(int*)a - *(int*)b);
}

int main() {
    int t;
    scanf("%d", &t);
    while (t--) {
        int n;
        scanf("%d", &n);
        int a[n], b[n];
        for (int i = 0; i < n; i++) {
            scanf("%d", &a[i]);
            b[i] = a[i];
        }

        qsort(b, n, sizeof(int), cmp);

        static int freqAeven[MAX], freqAodd[MAX];
        static int freqBeven[MAX], freqBodd[MAX];

        for (int i = 0; i <= 100000; i++) {
            freqAeven[i] = freqAodd[i] = 0;
            freqBeven[i] = freqBodd[i] = 0;
        }

        for (int i = 0; i < n; i++) {
            if (i % 2 == 0) freqAeven[a[i]]++;
            else            freqAodd[a[i]]++;
        }
        for (int i = 0; i < n; i++) {
            if (i % 2 == 0) freqBeven[b[i]]++;
            else            freqBodd[b[i]]++;
        }

        int ok = 1;
        for (int v = 1; v <= 100000; v++) {
            if (freqAeven[v] != freqBeven[v] || freqAodd[v] != freqBodd[v]) {
                ok = 0;
                break;
            }
        }

        printf(ok ? "YES\n" : "NO\n");
    }
    return 0;
}

