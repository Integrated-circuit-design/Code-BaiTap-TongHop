#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>

#define MAX 150005

int a[MAX];
bool used[MAX + 5];

int cmp(const void *x, const void *y) {
    return (*(int*)x - *(int*)y);
}

int main() {
    int n;
    scanf("%d", &n);

    for (int i = 0; i < n; i++) scanf("%d", &a[i]);

    qsort(a, n, sizeof(int), cmp);

    int ans = 0;
    for (int i = 0; i < n; i++) {
        if (a[i] > 1 && !used[a[i] - 1]) {
            used[a[i] - 1] = true;
            ans++;
        } else if (!used[a[i]]) {
            used[a[i]] = true;
            ans++;
        } else if (!used[a[i] + 1]) {
            used[a[i] + 1] = true;
            ans++;
        }
    }

    printf("%d\n", ans);
    return 0;
}

