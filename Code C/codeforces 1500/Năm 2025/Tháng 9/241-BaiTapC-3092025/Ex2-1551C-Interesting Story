#include <stdio.h>
#include <string.h>

#define MAXN 200005

char words[MAXN][6];
int score[MAXN];

int max(int a, int b) {
    return a > b ? a : b;
}

void sort_desc(int arr[], int n) {
    for(int i = 0; i < n-1; i++) {
        for(int j = i+1; j < n; j++) {
            if(arr[i] < arr[j]) {
                int tmp = arr[i];
                arr[i] = arr[j];
                arr[j] = tmp;
            }
        }
    }
}

int main() {
    int t;
    scanf("%d", &t);

    while(t--) {
        int n;
        scanf("%d", &n);
        for(int i = 0; i < n; i++) {
            scanf("%s", words[i]);
        }

        int ans = 0;

        for(char ch = 'a'; ch <= 'e'; ch++) {
            for(int i = 0; i < n; i++) {
                int len = strlen(words[i]);
                int cnt = 0;
                for(int j = 0; j < len; j++) {
                    if(words[i][j] == ch) cnt++;
                }
                score[i] = 2*cnt - len;
            }

            sort_desc(score, n);

            int sum = 0;
            int count = 0;
            for(int i = 0; i < n; i++) {
                if(sum + score[i] > 0) {
                    sum += score[i];
                    count++;
                } else break;
            }

            ans = max(ans, count);
        }

        printf("%d\n", ans);
    }

    return 0;
}

