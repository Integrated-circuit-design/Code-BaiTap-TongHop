#include <stdio.h>
#include <string.h>

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n;
        char s[20005];
        scanf("%d", &n);
        scanf("%s", s);

        int half = n / 2;
        int l1, r1, l2, r2;

        if (s[n-1] == '0') {
            l1 = n - half; r1 = n;
            l2 = 1; r2 = half + 1;
        } else {
            l1 = 1; r1 = half + 1;
            l2 = n - half; r2 = n;
        }

        printf("%d %d %d %d\n", l1, r1, l2, r2);
    }

    return 0;
}

