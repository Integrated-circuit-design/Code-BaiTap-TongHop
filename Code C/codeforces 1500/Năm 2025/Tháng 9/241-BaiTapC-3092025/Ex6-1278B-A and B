#include <stdio.h>
#include <stdlib.h>

long long sum_n(long long n) {
    return n * (n + 1) / 2;
}

long long min_ops(long long a, long long b) {
    long long diff = llabs(a - b);
    if (diff == 0) return 0;

    long long n = 0;
    while (1) {
        n++;
        long long total = sum_n(n);
        if (total >= diff && (total - diff) % 2 == 0) {
            return n;
        }
    }
}

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        long long a, b;
        scanf("%lld %lld", &a, &b);
        printf("%lld\n", min_ops(a, b));
    }

    return 0;
}

