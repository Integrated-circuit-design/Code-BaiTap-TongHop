#include <stdio.h>

int main() {
    int q;
    scanf("%d", &q);

    while (q--) {
        long long n;
        scanf("%lld", &n);

        long long m = 0;
        long long power = 1;

        long long temp = n;
        long long result = 0;
        int carry = 0;

        while (temp > 0 || carry > 0) {
            int digit = temp % 3 + carry;
            temp /= 3;

            if (digit == 0 || digit == 1) {
                result += digit * power;
                carry = 0;
            } else if (digit == 2) {
                result += 0;
                carry = 1;
            } else if (digit == 3) {
                result += 0;
                carry = 1;
            }

            power *= 3;
        }

        if (result < n) {
            long long next = 1;
            while (next <= result) next *= 3;
            result = next;
        }

        printf("%lld\n", result);
    }

    return 0;
}

