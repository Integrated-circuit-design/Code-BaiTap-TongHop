#include <stdio.h>

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        long long n, x, p;
        scanf("%lld %lld %lld", &n, &x, &p);

        int possible = 0;

        for (long long f = 1; f <= n && f <= p; f++) {
            long long sum_mod = 0;

            for (long long i = 1; i <= f; i++) {
                sum_mod = (sum_mod + i) % n;
            }

            if ((x + sum_mod) % n == 0) {
                possible = 1;
                break;
            }
        }

        if (possible)
            printf("Yes\n");
        else
            printf("No\n");
    }

    return 0;
}

