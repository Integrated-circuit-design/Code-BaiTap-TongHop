#include <stdio.h>

#define MOD 1000000007LL
typedef long long ll;

ll mulMod(ll a, ll b) {
    ll res = 0;
    a %= MOD;
    while (b > 0) {
        if (b % 2 == 1) res = (res + a) % MOD;
        a = (a * 2) % MOD;
        b /= 2;
    }
    return res;
}

ll powMod(ll a, ll b) {
    ll res = 1;
    while (b > 0) {
        if (b % 2 == 1) res = mulMod(res, a);
        a = mulMod(a, a);
        b /= 2;
    }
    return res;
}

int main() {
    ll n;
    scanf("%lld", &n);

    ll total = powMod(27, n);
    ll bad   = powMod(7, n);

    ll ans = (total - bad + MOD) % MOD;
    printf("%lld\n", ans);

    return 0;
}

