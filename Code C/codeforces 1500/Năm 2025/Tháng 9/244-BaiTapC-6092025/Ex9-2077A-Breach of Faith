#include <stdio.h>
#include <stdlib.h>

typedef long long ll;

int cmp(const void *x, const void *y) {
    ll a = *(ll*)x, b = *(ll*)y;
    return (a > b) - (a < b);
}

int main() {
    int t;
    scanf("%d", &t);
    while (t--) {
        int n;
        scanf("%d", &n);
        int m = 2 * n;
        ll b[m];
        for (int i = 0; i < m; i++) scanf("%lld", &b[i]);

        qsort(b, m, sizeof(ll), cmp);

        ll a[2*n + 2];
        a[1] = b[m-1];
        a[2*n+1] = b[m-2];

        int idx = 0;
        for (int i = 2; i <= 2*n-1; i++) {
            a[i] = b[idx++];
        }

        ll sum = a[1];
        for (int i = 2; i <= 2*n-2; i += 2) {
            sum += a[i+1] - a[i];
        }
        sum += a[2*n+1];
        a[2*n] = sum;

        for (int i = 1; i <= 2*n+1; i++) {
            if (i > 1) printf(" ");
            printf("%lld", a[i]);
        }
        printf("\n");
    }
    return 0;
}

