#include <stdio.h>
#include <string.h>

#define MAXN 200005

int calc(char *s, int n) {
    int odd[26] = {0}, even[26] = {0};
    int odd_total = (n+1)/2, even_total = n/2;
    int odd_max = 0, even_max = 0;

    for (int i = 0; i < n; i++) {
        if (i % 2 == 0) odd[s[i]-'a']++;
        else even[s[i]-'a']++;
    }
    for (int i = 0; i < 26; i++) {
        if (odd[i] > odd_max) odd_max = odd[i];
        if (even[i] > even_max) even_max = even[i];
    }
    return (odd_total - odd_max) + (even_total - even_max);
}

int main() {
    int t; 
    scanf("%d", &t);
    while (t--) {
        int n;
        char s[MAXN];
        scanf("%d", &n);
        scanf("%s", s);

        if (n % 2 == 0) {
            printf("%d\n", calc(s, n));
        } else {
            int ans = calc(s, n);
            ans = (1 + calc(s+1, n-1) < ans) ? 1 + calc(s+1, n-1) : ans;
            s[n-1] = '\0';
            int cost = 1 + calc(s, n-1);
            if (cost < ans) ans = cost;
            printf("%d\n", ans);
        }
    }
    return 0;
}

