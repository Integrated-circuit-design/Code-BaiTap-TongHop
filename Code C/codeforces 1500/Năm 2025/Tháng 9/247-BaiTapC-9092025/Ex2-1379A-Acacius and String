#include <stdio.h>
#include <string.h>

#define MAXN 55

char s[MAXN];
int n;
char target[] = "abacaba";

int is_unique(char str[]) {
    int cnt = 0;
    for (int i = 0; i <= n - 7; i++) {
        int ok = 1;
        for (int j = 0; j < 7; j++) {
            if (str[i+j] != target[j]) {
                ok = 0;
                break;
            }
        }
        if (ok) cnt++;
    }
    return cnt == 1;
}

int main() {
    int T;
    scanf("%d", &T);
    while (T--) {
        scanf("%d %s", &n, s);
        int success = 0;

        for (int i = 0; i <= n - 7 && !success; i++) {
            char temp[MAXN];
            strcpy(temp, s);
            int can_place = 1;

            for (int j = 0; j < 7; j++) {
                if (temp[i+j] != '?' && temp[i+j] != target[j]) {
                    can_place = 0;
                    break;
                }
                temp[i+j] = target[j];
            }
            if (!can_place) continue;

            for (int j = 0; j < n; j++) {
                if (temp[j] == '?') temp[j] = 'x';
            }

            if (is_unique(temp)) {
                printf("Yes\n%s\n", temp);
                success = 1;
            }
        }

        if (!success) printf("No\n");
    }
    return 0;
}

