#include <stdio.h>
#include <stdlib.h>

typedef struct {
    int idx;
    int r;
} Box;

int cmp(const void *a, const void *b) {
    Box *x = (Box *)a;
    Box *y = (Box *)b;
    return y->r - x->r;
}

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n, s1, s2;
        scanf("%d %d %d", &n, &s1, &s2);

        Box boxes[n];
        for (int i = 0; i < n; i++) {
            int r;
            scanf("%d", &r);
            boxes[i].idx = i + 1;
            boxes[i].r = r;
        }

        qsort(boxes, n, sizeof(Box), cmp);

        int a[n], b[n];
        int na = 0, nb = 0;

        int fastRobot = (s1 <= s2) ? 1 : 2;

        for (int i = 0; i < n; i++) {
            if (fastRobot == 1) {
                if (i % 2 == 0) a[na++] = boxes[i].idx;
                else b[nb++] = boxes[i].idx;
            } else {
                if (i % 2 == 0) b[nb++] = boxes[i].idx;
                else a[na++] = boxes[i].idx;
            }
        }

        printf("%d", na);
        for (int i = 0; i < na; i++) printf(" %d", a[i]);
        printf("\n");

        printf("%d", nb);
        for (int i = 0; i < nb; i++) printf(" %d", b[i]);
        printf("\n");
    }

    return 0;
}

