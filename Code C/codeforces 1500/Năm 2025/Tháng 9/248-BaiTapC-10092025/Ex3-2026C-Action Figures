#include <stdio.h>

typedef long long ll;

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n;
        scanf("%d", &n);

        char s[n + 5];
        scanf("%s", s + 1);

        ll total = (ll)n * (n + 1) / 2;
        ll ans = total;
        int waiting = 0;

        for (int i = 1; i <= n; i++) {
            waiting++;
            if (s[i] == '1' && i < n) {
                if (waiting > 0) {
                    ans -= i;
                    waiting--;
                }
            }
        }

        printf("%lld\n", ans);
    }

    return 0;
}

