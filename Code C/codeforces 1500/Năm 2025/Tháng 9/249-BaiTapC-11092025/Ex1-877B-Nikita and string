#include <stdio.h>
#include <string.h>

int max(int a, int b) {
    return a > b ? a : b;
}

int main() {
    char s[5005];
    scanf("%s", s);
    int n = strlen(s);

    int a_left = 0, b_middle = 0, a_right = 0;
    int max_length = 0;

    for (int i = 0; i < n; i++) {
        if (s[i] == 'a') {
            a_right = max(a_left, a_right) + 1;
        } else if (s[i] == 'b') {
            b_middle = max(a_left, b_middle) + 1;
        }
        max_length = max(max_length, max(a_left, max(b_middle, a_right)));
    }

    printf("%d\n", max_length);

    return 0;
}

