#include <stdio.h>
#include <string.h>

#define MAXN 200005

int main() {
    char s[MAXN];
    scanf("%s", s);
    int n = strlen(s);

    int ans = 0, mod = 0; 

    for (int i = 0; i < n; i++) {
        mod = (mod + (s[i] - '0')) % 3;
        if (mod == 0) {
            ans++;
            mod = 0;
        }
    }

    printf("%d\n", ans);
    return 0;
}

