#include <stdio.h>
#include <stdlib.h>

#define MAXN 100000

long long a[MAXN];

int cmp(const void *x, const void *y) {
    long long p = *(long long*)x, q = *(long long*)y;
    return (p > q) - (p < q);
}

int binary_search(long long arr[], int n, long long x) {
    int l = 0, r = n - 1;
    while (l <= r) {
        int mid = (l + r) / 2;
        if (arr[mid] == x) return 1;
        if (arr[mid] < x) l = mid + 1;
        else r = mid - 1;
    }
    return 0;
}

int main() {
    int n, ans = 0;
    long long k;
    scanf("%d %lld", &n, &k);
    for (int i = 0; i < n; i++) scanf("%lld", &a[i]);

    qsort(a, n, sizeof(long long), cmp);

    for (int i = 0; i < n; i++) {
        if (k != 1 && a[i] % k == 0) {
            if (binary_search(a, i, a[i] / k)) continue;
        }
        ans++;
    }

    printf("%d\n", ans);
    return 0;
}

