#include <stdio.h>
#include <string.h>

#define MAXN 200005

int main() {
    int T;
    scanf("%d", &T);

    while (T--) {
        int n;
        long long a, b;
        scanf("%d %lld %lld", &n, &a, &b);

        char s[MAXN];
        scanf("%s", s);

        long long totalCost = 0;
        int height = 1;

        totalCost += b;

        for (int i = 0; i < n; i++) {
            if (s[i] == '0') {
                if (height == 1) {
                    totalCost += a + b;
                } else {
                    totalCost += a*2 + b;
                    height = 1;
                }
            } else {
                if (height == 1) {
                    totalCost += a*2 + 2*b;
                    height = 2;
                } else {
                    totalCost += a*2 + 2*b;
                }
            }
        }

        printf("%lld\n", totalCost);
    }

    return 0;
}

