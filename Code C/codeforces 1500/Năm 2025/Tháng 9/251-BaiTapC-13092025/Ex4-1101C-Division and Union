#include <stdio.h>

#define MAXN 100005

typedef struct {
    int l, r;
} Segment;

Segment seg[MAXN];
int group[MAXN];

int main() {
    int T;
    scanf("%d", &T);

    while (T--) {
        int n;
        scanf("%d", &n);

        for (int i = 0; i < n; i++) {
            scanf("%d %d", &seg[i].l, &seg[i].r);
            group[i] = 0;
        }

        group[0] = 1;
        int right1 = seg[0].r;

        for (int i = 1; i < n; i++) {
            if (seg[i].l <= right1 && seg[i].r >= seg[0].l) {
                group[i] = 1;
                if (seg[i].r > right1) right1 = seg[i].r;
            }
        }

        int count2 = 0;
        for (int i = 0; i < n; i++) {
            if (group[i] == 0) {
                group[i] = 2;
                count2++;
            }
        }

        if (count2 == 0) {
            printf("-1\n");
        } else {
            for (int i = 0; i < n; i++) {
                printf("%d%c", group[i], i == n-1 ? '\n' : ' ');
            }
        }
    }

    return 0;
}

