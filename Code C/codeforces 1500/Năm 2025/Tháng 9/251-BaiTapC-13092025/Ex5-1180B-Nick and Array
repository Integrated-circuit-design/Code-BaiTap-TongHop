#include <stdio.h>
#include <stdlib.h>

int cmp(const void *a, const void *b) {
    int x = *(int*)a, y = *(int*)b;
    return abs(y) - abs(x);
}

int main() {
    int n;
    scanf("%d", &n);
    int a[n];

    for(int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    for(int i = 0; i < n; i++) {
        if(a[i] >= 0) a[i] = -a[i] - 1;
    }

    if(n % 2 != 0) {
        int min_idx = 0;
        for(int i = 1; i < n; i++) {
            if(abs(a[i]) < abs(a[min_idx])) min_idx = i;
        }
        a[min_idx] = -a[min_idx] - 1;
    }

    for(int i = 0; i < n; i++) {
        printf("%d%c", a[i], i == n-1 ? '\n' : ' ');
    }

    return 0;
}

