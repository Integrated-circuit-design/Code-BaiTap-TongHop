#include <stdio.h>
#include <stdlib.h>
#include <math.h>

#define INF 1000000000
typedef long long ll;

int n;
ll b[100005];

int check(int d1, int d2) {
    ll a1 = b[0] + d1;
    ll a2 = b[1] + d2;
    ll d = a2 - a1;
    int changes = (d1 != 0) + (d2 != 0);

    for (int i = 2; i < n; i++) {
        ll need = a1 + (ll)i * d;
        if (llabs(b[i] - need) > 1) return INF;
        if (b[i] != need) changes++;
    }
    return changes;
}

int main() {
    scanf("%d", &n);
    for (int i = 0; i < n; i++) scanf("%lld", &b[i]);

    if (n <= 2) {
        printf("0\n");
        return 0;
    }

    int ans = INF;
    for (int d1 = -1; d1 <= 1; d1++)
        for (int d2 = -1; d2 <= 1; d2++)
            if (check(d1, d2) < ans) ans = check(d1, d2);

    if (ans == INF) printf("-1\n");
    else printf("%d\n", ans);
    return 0;
}

