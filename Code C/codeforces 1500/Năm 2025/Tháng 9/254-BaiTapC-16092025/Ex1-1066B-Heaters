#include <stdio.h>

int main() {
    int n, r;
    scanf("%d %d", &n, &r);

    int a[n+1], heat[n+1];
    for (int i = 1; i <= n; i++) {
        scanf("%d", &a[i]);
        heat[i] = 0;
    }

    int ans = 0;

    for (int i = 1; i <= n; i++) {
        if (heat[i]) continue;

        int pos = -1;
        int right = (i + r - 1 < n ? i + r - 1 : n);
        int left = (i - r + 1 > 1 ? i - r + 1 : 1);

        for (int j = right; j >= left; j--) {
            if (a[j] == 1) {
                pos = j;
                break;
            }
        }

        if (pos == -1) {
            printf("-1\n");
            return 0;
        }

        for (int k = pos - r + 1; k <= pos + r - 1; k++) {
            if (k >= 1 && k <= n) heat[k] = 1;
        }

        ans++;
    }

    printf("%d\n", ans);
    return 0;
}

