#include <stdio.h>
#include <limits.h>

typedef long long ll;

ll solveOneCase(int n, ll arr[]) {
    ll sumAlt = 0;
    for (int i = 0; i < n; i++) {
        sumAlt += (i % 2 == 0 ? arr[i] : -arr[i]);
    }

    ll biggest = arr[0];
    for (int i = 1; i < n; i++) {
        if (arr[i] > biggest) biggest = arr[i];
    }

    ll minNeg = LLONG_MAX;
    for (int i = 1; i < n; i += 2) {
        if (arr[i] < minNeg) minNeg = arr[i];
    }

    if (minNeg == LLONG_MAX) return sumAlt;
    ll better = sumAlt + (biggest - minNeg);
    return (better > sumAlt ? better : sumAlt);
}

int main() {
    int t;
    scanf("%d", &t);
    while (t--) {
        int n;
        scanf("%d", &n);
        ll arr[200005];
        for (int i = 0; i < n; i++) scanf("%lld", &arr[i]);
        printf("%lld\n", solveOneCase(n, arr));
    }
    return 0;
}

