#include <stdio.h>
#include <string.h>

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n;
        char s[200005];
        scanf("%d %s", &n, s);

        char ans[200005];
        char last1 = '0' - 1;
        char last2 = '0' - 1;
        int possible = 1;

        for (int i = 0; i < n; i++) {
            char d = s[i];

            if (d >= last1) {
                ans[i] = '1';
                last1 = d;
            } else if (d >= last2) {
                ans[i] = '2';
                last2 = d;
            } else {
                possible = 0;
                break;
            }
        }

        if (possible) {
            ans[n] = '\0';
            printf("%s\n", ans);
        } else {
            printf("-\n");
        }
    }

    return 0;
}

