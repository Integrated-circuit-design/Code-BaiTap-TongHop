#include <stdio.h>
#include <string.h>

#define MAXN 100

int main() {
    char row0[MAXN + 1], row1[MAXN + 1];
    scanf("%s%s", row0, row1);
    int n = strlen(row0);

    int count = 0;
    int i = 0;

    while (i < n) {
        if (row0[i] == '0' && row1[i] == '0') {
            if (i + 1 < n) {
                if ((row0[i+1] == '0' && row1[i] == '0') || 
                    (row0[i] == '0' && row1[i+1] == '0') || 
                    (row0[i+1] == '0' && row1[i+1] == '0')) {
                    count++;
                    row0[i] = row0[i+1] = 'X';
                    row1[i] = row1[i+1] = 'X';
                    i++;
                } else {
                    i++;
                }
            } else {
                i++;
            }
        } else {
            i++;
        }
    }

    printf("%d\n", count);
    return 0;
}

