#include <stdio.h>

int main() {
    int n;
    long long w;
    scanf("%d %lld", &n, &w);

    long long cups[200000];
    for (int i = 0; i < 2*n; i++) {
        scanf("%lld", &cups[i]);
    }

    long long min1 = 1000000000LL + 1;
    long long min2 = 1000000000LL + 1;

    for (int i = 0; i < 2*n; i++) {
        if (cups[i] < min1) {
            min2 = min1;
            min1 = cups[i];
        } else if (cups[i] < min2) {
            min2 = cups[i];
        }
    }

    double x = min1;

    if (min2 / 2.0 < x) {
        x = min2 / 2.0;
    }

    double total = 3.0 * n * x;

    if (total > w) total = w;

    printf("%.10lf\n", total);

    return 0;
}

