#include <stdio.h>

#define MAXN 100005

int main() {
    int n;
    scanf("%d", &n);

    long long a[MAXN];
    int displeasure[MAXN];

    for(int i = 0; i < n; i++) {
        scanf("%lld", &a[i]);
        displeasure[i] = -1;
    }

    int next_youngest = n;
    for(int i = n - 1; i >= 0; i--) {
        if(next_youngest < n && a[next_youngest] < a[i]) {
            displeasure[i] = next_youngest - i - 1;
        }
        if(next_youngest == n || a[i] < a[next_youngest]) {
            next_youngest = i;
        }
    }

    for(int i = 0; i < n; i++) {
        if(i) printf(" ");
        printf("%d", displeasure[i]);
    }
    printf("\n");

    return 0;
}

