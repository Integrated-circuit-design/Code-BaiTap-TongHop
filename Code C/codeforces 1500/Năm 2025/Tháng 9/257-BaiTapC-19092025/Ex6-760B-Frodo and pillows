#include <stdio.h>

long long min(long long a, long long b) {
    return a < b ? a : b;
}

int main() {
    long long n, m, k;
    scanf("%lld %lld %lld", &n, &m, &k);

    long long frodo = 1;

    while (1) {
        long long left_len = k - 1;
        long long right_len = n - k;
        long long total = frodo;

        long long left = frodo - 1;
        if (left_len <= left)
            total += (frodo - 1 + frodo - left_len) * left_len / 2;
        else
            total += (frodo - 1) * frodo / 2 + (left_len - left);

        long long right = frodo - 1;
        if (right_len <= right)
            total += (frodo - 1 + frodo - right_len) * right_len / 2;
        else
            total += (frodo - 1) * frodo / 2 + (right_len - right);

        if (total > m) break;
        frodo++;
    }

    printf("%lld\n", frodo - 1);
    return 0;
}

