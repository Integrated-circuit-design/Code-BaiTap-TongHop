#include <stdio.h>

int main() {
    int n, x;
    scanf("%d %d", &n, &x);

    int a[505];
    int less = 0, equal = 0, greater = 0;

    for(int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
        if(a[i] < x) less++;
        else if(a[i] == x) equal++;
        else greater++;
    }

    int total = n;
    int added = 0;

    while (1) {
        int median_pos = total / 2;
        if(less <= median_pos && median_pos < less + equal) {
            break;
        }
        added++;
        equal++;
        total++;
    }

    printf("%d\n", added);
    return 0;
}

