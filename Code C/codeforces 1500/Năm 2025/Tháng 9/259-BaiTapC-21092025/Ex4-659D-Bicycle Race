#include <stdio.h>

#define MAXN 1005
typedef long long ll;

int main() {
    int n;
    scanf("%d", &n);

    ll x[MAXN+5], y[MAXN+5];
    for (int i = 0; i <= n; i++) {
        scanf("%lld %lld", &x[i], &y[i]);
    }

    ll area2 = 0;
    for (int i = 0; i < n; i++) {
        area2 += x[i] * y[i+1] - x[i+1] * y[i];
    }
    int ccw = (area2 > 0);

    int danger = 0;
    for (int i = 1; i < n; i++) {
        ll x1 = x[i] - x[i-1];
        ll y1 = y[i] - y[i-1];
        ll x2 = x[i+1] - x[i];
        ll y2 = y[i+1] - y[i];

        ll cross = x1 * y2 - y1 * x2;

        if (ccw) {
            if (cross < 0) danger++;
        } else {
            if (cross > 0) danger++;
        }
    }

    printf("%d\n", danger);
    return 0;
}

