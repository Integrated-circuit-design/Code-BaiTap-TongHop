#include <stdio.h>

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n, p;
        scanf("%d %d", &n, &p);

        int need = 2 * n + p;
        int cnt = 0;

        for (int d = 1; d < n && cnt < need; d++) {
            for (int i = 1; i + d <= n && cnt < need; i++) {
                int j = i + d;
                printf("%d %d\n", i, j);
                cnt++;
                if (cnt == need) break;
            }
        }
    }

    return 0;
}

