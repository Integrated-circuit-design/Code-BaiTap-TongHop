#include <stdio.h>

#define SCALE 10000
int glass[15][15];

int main() {
    int n, t;
    scanf("%d %d", &n, &t);

    for (int sec = 0; sec < t; sec++) {
        glass[1][1] += SCALE;

        for (int i = 1; i <= n; i++) {
            for (int j = 1; j <= i; j++) {
                if (glass[i][j] > SCALE) {
                    int overflow = glass[i][j] - SCALE;
                    glass[i][j] = SCALE;
                    if (i < n) {
                        glass[i+1][j]   += overflow / 2;
                        glass[i+1][j+1] += overflow / 2;
                    }
                }
            }
        }
    }

    int full = 0;
    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= i; j++) {
            if (glass[i][j] == SCALE) {
                full++;
            }
        }
    }

    printf("%d\n", full);
    return 0;
}

