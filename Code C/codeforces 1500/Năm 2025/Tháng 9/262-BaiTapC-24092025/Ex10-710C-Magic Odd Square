#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int a[55][55];
    int odd = 1, even = 2;

    for (int i = 0; i < n; i++) {
        int j = n - 1 - i;
        a[i][j] = odd;
        odd += 2;
    }

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (i + j == n - 1) continue;
            if (even <= n * n) {
                a[i][j] = even;
                even += 2;
            } else {
                a[i][j] = odd;
                odd += 2;
            }
        }
    }

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (j) printf(" ");
            printf("%d", a[i][j]);
        }
        printf("\n");
    }

    return 0;
}

