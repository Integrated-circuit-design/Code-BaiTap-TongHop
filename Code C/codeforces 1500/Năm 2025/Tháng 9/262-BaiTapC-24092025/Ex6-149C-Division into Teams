#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);
    int a[100005];
    int maxSkill = -1, maxId = -1;

    for (int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
        if (a[i] > maxSkill) {
            maxSkill = a[i];
            maxId = i + 1;
        }
    }

    printf("1\n%d\n", maxId);

    printf("%d\n", n - 1);
    for (int i = 0; i < n; i++) {
        if (i + 1 != maxId) {
            printf("%d ", i + 1);
        }
    }
    printf("\n");

    return 0;
}

