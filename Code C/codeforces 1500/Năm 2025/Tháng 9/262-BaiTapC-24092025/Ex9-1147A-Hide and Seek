#include <stdio.h>

#define MAXN 100005

int asked[MAXN];
int pos[MAXN];
int query[MAXN];

int valid_pair(int a, int b, int k) {
    int lastA = 0, firstA = k+1;
    int lastB = 0, firstB = k+1;

    for (int i = 1; i <= k; i++) {
        if (query[i] == a) {
            if (firstA == k+1) firstA = i;
            lastA = i;
        }
        if (query[i] == b) {
            if (firstB == k+1) firstB = i;
            lastB = i;
        }
    }

    if (a == b) {
        return (firstA == k+1);
    }

    if (lastB < firstA) return 1;
    if (lastA < firstB) return 1;

    return 0;
}

int main() {
    int n, k;
    scanf("%d %d", &n, &k);

    for (int i = 1; i <= k; i++) {
        scanf("%d", &query[i]);
        asked[query[i]] = 1;
    }

    long long ans = 0;

    for (int i = 1; i <= n; i++) {
        if (valid_pair(i,i,k)) ans++;
    }

    for (int i = 1; i < n; i++) {
        if (valid_pair(i, i+1, k)) ans++;
        if (valid_pair(i+1, i, k)) ans++;
    }

    printf("%lld\n", ans);
    return 0;
}

