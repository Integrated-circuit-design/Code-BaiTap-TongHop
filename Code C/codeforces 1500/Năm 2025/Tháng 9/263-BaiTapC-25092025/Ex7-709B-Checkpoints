#include <stdio.h>
#include <limits.h>

typedef long long ll;

ll Abs(ll x) { return x < 0 ? -x : x; }

int main() {
    int n;
    ll a;
    scanf("%d %lld", &n, &a);

    ll x, min = LLONG_MAX, max = LLONG_MIN;
    ll secondMin = LLONG_MAX, secondMax = LLONG_MIN;

    ll arr[n];
    for (int i = 0; i < n; i++) {
        scanf("%lld", &arr[i]);
        if (arr[i] < min) {
            secondMin = min;
            min = arr[i];
        } else if (arr[i] < secondMin) {
            secondMin = arr[i];
        }
        if (arr[i] > max) {
            secondMax = max;
            max = arr[i];
        } else if (arr[i] > secondMax) {
            secondMax = arr[i];
        }
    }

    if (n == 1) {
        printf("0\n");
        return 0;
    }
    if (n == 2) {
        ll d1 = Abs(a - arr[0]), d2 = Abs(a - arr[1]);
        printf("%lld\n", d1 < d2 ? d1 : d2);
        return 0;
    }

    ll option1 = (max - secondMin) + (Abs(a - max) < Abs(a - secondMin) ? Abs(a - max) : Abs(a - secondMin));
    ll option2 = (secondMax - min) + (Abs(a - secondMax) < Abs(a - min) ? Abs(a - secondMax) : Abs(a - min));

    ll ans = option1 < option2 ? option1 : option2;
    printf("%lld\n", ans);

    return 0;
}

