#include <stdio.h>

#define MAXN 100

int main() {
    int n;
    char grid[MAXN][MAXN + 1];
    int rowDone[MAXN] = {0};
    int colDone[MAXN] = {0};

    scanf("%d", &n);
    for (int i = 0; i < n; i++) {
        scanf("%s", grid[i]);
    }

    int impossible = 0;

    for (int i = 0; i < n; i++) {
        int rowHasDot = 0, colHasDot = 0;
        for (int j = 0; j < n; j++) {
            if (grid[i][j] == '.') rowHasDot = 1;
            if (grid[j][i] == '.') colHasDot = 1;
        }
        if (!rowHasDot || !colHasDot) {
            impossible = 1;
            break;
        }
    }

    if (impossible) {
        printf("-1\n");
        return 0;
    }

    for (int j = 0; j < n; j++) {
        for (int i = 0; i < n; i++) {
            if (grid[i][j] == '.' && !rowDone[i]) {
                printf("%d %d\n", i + 1, j + 1);
                rowDone[i] = 1;
                break;
            }
        }
    }

    return 0;
}

