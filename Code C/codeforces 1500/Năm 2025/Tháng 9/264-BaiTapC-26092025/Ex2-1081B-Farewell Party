#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int a[n];
    for (int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    int b[n];
    for (int i = 0; i < n; i++) b[i] = 0;

    int hat = 1;

    for (int i = 0; i < n; i++) {
        if (b[i] != 0) continue;

        int groupSize = n - a[i];
        if (groupSize <= 0) {
            printf("Impossible\n");
            return 0;
        }

        int count = 0;
        for (int j = i; j < n && count < groupSize; j++) {
            if (a[j] == a[i] && b[j] == 0) {
                b[j] = hat;
                count++;
            }
        }

        if (count != groupSize) {
            printf("Impossible\n");
            return 0;
        }

        hat++;
    }

    printf("Possible\n");
    for (int i = 0; i < n; i++) {
        printf("%d ", b[i]);
    }
    printf("\n");

    return 0;
}

