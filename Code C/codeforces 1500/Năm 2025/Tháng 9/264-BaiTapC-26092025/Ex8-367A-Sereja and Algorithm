#include <stdio.h>
#include <string.h>

#define MAXN 100005

char s[MAXN];

int main() {
    scanf("%s", s+1);
    int n = strlen(s+1);
    
    int m;
    scanf("%d", &m);

    while(m--) {
        int l, r;
        scanf("%d %d", &l, &r);
        int len = r - l + 1;

        if(len < 3) {
            printf("YES\n");
            continue;
        }

        int cnt[3] = {0,0,0};
        for(int i=l; i<=r; i++){
            if(s[i]=='x') cnt[0]++;
            else if(s[i]=='y') cnt[1]++;
            else if(s[i]=='z') cnt[2]++;
        }

        int maxc = cnt[0];
        if(cnt[1]>maxc) maxc = cnt[1];
        if(cnt[2]>maxc) maxc = cnt[2];

        int minc = cnt[0];
        if(cnt[1]<minc) minc = cnt[1];
        if(cnt[2]<minc) minc = cnt[2];

        if(maxc - minc > 1)
            printf("YES\n");
        else
            printf("NO\n");
    }

    return 0;
}

