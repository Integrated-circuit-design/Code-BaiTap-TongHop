#include <stdio.h>
#include <string.h>

#define NEG -1000000000000000000LL
#define MAXLEN 15

long long dp[26][26];
char s[MAXLEN];

long long maxll(long long a, long long b) {
    return (a > b ? a : b);
}

int main() {
    int n;
    scanf("%d", &n);

    for (int i=0;i<26;i++)
        for (int j=0;j<26;j++)
            dp[i][j] = NEG;

    for (int t=0;t<n;t++) {
        scanf("%s", s);
        int len = strlen(s);
        int f = s[0]-'a';
        int l = s[len-1]-'a';

        long long tmp[26];
        for (int i=0;i<26;i++) tmp[i] = dp[i][f];

        for (int i=0;i<26;i++) {
            if (tmp[i] > NEG/2) {
                dp[i][l] = maxll(dp[i][l], tmp[i] + len);
            }
        }

        dp[f][l] = maxll(dp[f][l], (long long)len);
    }

    long long ans = 0;
    for (int c=0;c<26;c++) {
        if (dp[c][c] > ans) ans = dp[c][c];
    }

    printf("%lld\n", ans);
    return 0;
}

