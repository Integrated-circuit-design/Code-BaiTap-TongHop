#include <stdio.h>

int main() {
    int n, m, k;
    scanf("%d %d %d", &n, &m, &k);

    int tmp;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            scanf("%d", &tmp);
        }
    }

    int total = m * (m - 1) / 2;
    printf("%d\n", total);

    if (k == 0) {
        for (int i = 2; i <= m; i++) {
            for (int j = i - 1; j >= 1; j--) {
                printf("%d %d\n", j, j + 1);
            }
        }
    } else {
        for (int i = m - 1; i >= 1; i--) {
            for (int j = i; j < m; j++) {
                printf("%d %d\n", j + 1, j);
            }
        }
    }

    return 0;
}

