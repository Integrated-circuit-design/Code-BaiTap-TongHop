#include <stdio.h>

#define MAXN 105

int L[MAXN], R[MAXN];
int isHead[MAXN], isTail[MAXN];

int main() {
    int n;
    scanf("%d", &n);

    for (int i = 1; i <= n; i++) {
        scanf("%d %d", &L[i], &R[i]);
    }

    for (int i = 1; i <= n; i++) {
        if (L[i] == 0) isHead[i] = 1;
        if (R[i] == 0) isTail[i] = 1;
    }

    int prevTail = 0;
    for (int i = 1; i <= n; i++) {
        if (isHead[i]) {
            if (prevTail != 0) {
                R[prevTail] = i;
                L[i] = prevTail;
            }
            int cur = i;
            while (R[cur] != 0) cur = R[cur];
            prevTail = cur;
        }
    }

    for (int i = 1; i <= n; i++) {
        printf("%d %d\n", L[i], R[i]);
    }
    return 0;
}

