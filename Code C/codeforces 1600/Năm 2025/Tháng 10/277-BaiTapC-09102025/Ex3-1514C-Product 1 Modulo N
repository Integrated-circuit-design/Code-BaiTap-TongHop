#include <stdio.h>

int getGCD(int a, int b) {
    return b == 0 ? a : getGCD(b, a % b);
}

int main() {
    int n;
    scanf("%d", &n);

    int nums[100000];
    int size = 0;
    long long total = 1;

    for (int i = 1; i < n; i++) {
        if (getGCD(i, n) == 1) {
            nums[size++] = i;
            total = (total * i) % n;
        }
    }

    if (total != 1) {
        int newSize = 0;
        for (int i = 0; i < size; i++) {
            if (nums[i] != total) {
                nums[newSize++] = nums[i];
            }
        }
        size = newSize;
    }

    printf("%d\n", size);
    for (int i = 0; i < size; i++) {
        printf("%d", nums[i]);
        if (i < size - 1) printf(" ");
    }
    printf("\n");

    return 0;
}

