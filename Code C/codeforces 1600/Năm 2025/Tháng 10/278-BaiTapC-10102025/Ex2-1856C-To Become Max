#include <stdio.h>

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n;
        long long k;
        scanf("%d %lld", &n, &k);

        int a[n];
        for (int i = 0; i < n; i++) scanf("%d", &a[i]);

        long long remaining = k;
        int pos;

        while (remaining > 0) {
            pos = -1;
            for (int i = 0; i < n - 1; i++) {
                if (a[i] < a[i + 1]) {
                    pos = i;
                    break;
                }
            }

            if (pos == -1) break;

            long long max_inc = a[pos + 1] - a[pos];
            if (max_inc > remaining) max_inc = remaining;

            a[pos] += max_inc;
            remaining -= max_inc;
        }

        int max_val = a[0];
        for (int i = 1; i < n; i++) {
            if (a[i] > max_val) max_val = a[i];
        }

        printf("%d\n", max_val);
    }

    return 0;
}

