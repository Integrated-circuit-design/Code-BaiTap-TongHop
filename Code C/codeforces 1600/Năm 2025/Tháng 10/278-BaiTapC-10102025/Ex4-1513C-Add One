#include <stdio.h>
#include <string.h>

#define MOD 1000000007
#define MAXM 200005

int main() {
    int t;
    scanf("%d", &t);

    long long count[10];
    long long next[10];

    while (t--) {
        long long n;
        int m;
        scanf("%lld %d", &n, &m);

        char s[20];
        sprintf(s, "%lld", n);
        int len = strlen(s);

        memset(count, 0, sizeof(count));
        for (int i = 0; i < len; i++) {
            int d = s[i] - '0';
            count[d]++;
        }

        for (int op = 0; op < m; op++) {
            memset(next, 0, sizeof(next));
            for (int d = 0; d <= 8; d++) {
                next[d+1] = (next[d+1] + count[d]) % MOD;
            }
            next[0] = (next[0] + count[9]) % MOD;
            next[1] = (next[1] + count[9]) % MOD;

            for (int d = 0; d <= 9; d++) count[d] = next[d];
        }

        long long result = 0;
        for (int d = 0; d <= 9; d++) {
            result = (result + count[d]) % MOD;
        }

        printf("%lld\n", result);
    }

    return 0;
}

