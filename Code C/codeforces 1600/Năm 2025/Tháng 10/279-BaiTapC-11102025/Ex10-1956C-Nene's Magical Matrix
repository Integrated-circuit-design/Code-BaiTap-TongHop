#include <stdio.h>

typedef long long ll;

ll max_sum(int n) {
    return (ll)n * n * n - (ll)n * (n - 1) / 2;
}

void print_permutation(int i, int n) {
    printf("1 %d ", i);
    for (int j = 0; j < n; j++) {
        int val = (j + i - 1) % n + 1;
        printf("%d", val);
        if (j < n - 1) printf(" ");
    }
    printf("\n");
}

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n;
        scanf("%d", &n);
        ll s = max_sum(n);
        printf("%lld %d\n", s, n);
        for (int i = 1; i <= n; i++) {
            print_permutation(i, n);
        }
    }

    return 0;
}

