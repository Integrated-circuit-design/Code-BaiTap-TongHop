#include <stdio.h>

long long solve(long long x, long long y) {
    if (y < x) return x + y;
    long long mod = y % x;
    return y - mod / 2;
}

int main() {
    int t;
    scanf("%d", &t);
    while (t--) {
        long long x, y;
        scanf("%lld %lld", &x, &y);
        printf("%lld\n", solve(x, y));
    }
    return 0;
}

