#include <stdio.h>
#include <stdlib.h>

#define MAX_SIZE 100005

int main() {
    int n;
    scanf("%d", &n);

    int *sizes = (int*)malloc(n * sizeof(int));
    int countSizes[MAX_SIZE] = {0};
    int maxSize = 0;

    for (int i = 0; i < n; i++) {
        scanf("%d", &sizes[i]);
        countSizes[sizes[i]]++;
        if (sizes[i] > maxSize) maxSize = sizes[i];
    }

    int visible = n;

    for (int s = 1; s <= maxSize; s++) {
        while (countSizes[s] > 0) {
            int t = 2 * s;
            while (t <= maxSize && countSizes[t] == 0) t++;
            if (t > maxSize) break;
            countSizes[s]--;
            countSizes[t]--;
            visible--;
        }
    }

    printf("%d\n", visible);

    free(sizes);
    return 0;
}

