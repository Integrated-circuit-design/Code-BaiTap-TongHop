#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    long long rounds_needed = 0;
    long long max_play = 0;

    long long a;
    for (int i = 0; i < n; i++) {
        scanf("%lld", &a);
        rounds_needed += a;
        if (a > max_play) max_play = a;
    }

    long long min_rounds = (rounds_needed + n - 2) / (n - 1);
    if (min_rounds < max_play) min_rounds = max_play;

    printf("%lld\n", min_rounds);

    return 0;
}

