#include <stdio.h>
#include <stdlib.h>

#define ll long long
#define MAXN 200005

ll a[MAXN], temp[MAXN];

int cmpdesc(const void *x, const void *y) {
    ll A = *(ll*)x, B = *(ll*)y;
    return (A < B) - (A > B);
}

int cmpasc(const void *x, const void *y) {
    ll A = *(ll*)x, B = *(ll*)y;
    return (A > B) - (A < B);
}

int main() {
    int t;
    scanf("%d", &t);
    while (t--) {
        int n, m;
        scanf("%d %d", &n, &m);
        for (int i = 1; i <= n; i++) scanf("%lld", &a[i]);

        ll ans = 0;
        ll sum = a[m];

        int cnt = 0;
        sum = a[m];
        for (int i = m - 1; i >= 1; i--) {
            sum += a[i];
            if (a[i] > 0) temp[cnt++] = a[i];
            while (sum > a[m] && cnt > 0) {
                qsort(temp, cnt, sizeof(ll), cmpdesc);
                sum -= 2 * temp[0];
                for (int j = 1; j < cnt; j++) temp[j - 1] = temp[j];
                cnt--;
                ans++;
            }
        }

        cnt = 0;
        sum = a[m];
        for (int i = m + 1; i <= n; i++) {
            sum += a[i];
            if (a[i] < 0) temp[cnt++] = -a[i];
            while (sum < a[m] && cnt > 0) {
                qsort(temp, cnt, sizeof(ll), cmpdesc);
                sum += 2 * temp[0];
                for (int j = 1; j < cnt; j++) temp[j - 1] = temp[j];
                cnt--;
                ans++;
            }
        }

        printf("%lld\n", ans);
    }
    return 0;
}

