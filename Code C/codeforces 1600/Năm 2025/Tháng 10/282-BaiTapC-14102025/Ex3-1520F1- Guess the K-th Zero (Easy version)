#include <stdio.h>
#include <stdlib.h>

int getSum(int l, int r) {
    printf("? %d %d\n", l, r);
    fflush(stdout);
    int total;
    if (scanf("%d", &total) != 1) exit(0);
    return total;
}

int findKthZero(int n, int k) {
    int low = 1, high = n, result = -1;

    while (low <= high) {
        int mid = low + (high - low) / 2;
        int ones = getSum(1, mid);
        int zeros = mid - ones;

        if (zeros < k) {
            low = mid + 1;
        } else {
            result = mid;
            high = mid - 1;
        }
    }

    return result;
}

int main() {
    int n, t;
    if (scanf("%d %d", &n, &t) != 2) return 0;

    for (int i = 0; i < t; i++) {
        int k;
        if (scanf("%d", &k) != 1) return 0;

        int pos = findKthZero(n, k);
        printf("! %d\n", pos);
        fflush(stdout);
    }

    return 0;
}

