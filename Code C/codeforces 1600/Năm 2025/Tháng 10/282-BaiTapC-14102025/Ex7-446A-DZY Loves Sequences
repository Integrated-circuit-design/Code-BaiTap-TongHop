#include <stdio.h>

#define MAXN 100005

long long a[MAXN];

int max(int x, int y) { return x > y ? x : y; }

int main() {
    int n;
    scanf("%d", &n);
    for (int i = 0; i < n; i++) scanf("%lld", &a[i]);

    int ans = 1;
    int start = 0;
    int changed = 0;

    for (int end = 1; end < n; end++) {
        if (a[end] > a[end-1]) {
            ans = max(ans, end - start + 1);
        } else if (!changed) {
            changed = 1;
            ans = max(ans, end - start + 1);
        } else {
            start = end - 1;
            changed = 1;
            ans = max(ans, end - start + 1);
        }
    }

    printf("%d\n", ans);
    return 0;
}

