#include <stdio.h>

int check_sorted(int a[], int n) {
    for (int i = 1; i < n; i++)
        if (a[i] < a[i - 1])
            return 0;
    return 1;
}

int main() {
    int t;
    scanf("%d", &t);
    while (t--) {
        int n, x;
        scanf("%d %d", &n, &x);
        int a[505];
        for (int i = 0; i < n; i++) scanf("%d", &a[i]);

        if (check_sorted(a, n)) {
            printf("0\n");
            continue;
        }

        int cnt = 0, done = 0;

        for (int i = 0; i < n; i++) {
            if (a[i] <= x) continue;
            int temp = a[i];
            a[i] = x;
            x = temp;
            cnt++;
            if (check_sorted(a, n)) {
                done = 1;
                break;
            }
        }

        while (!done) {
            int pos = -1;
            for (int i = 0; i < n; i++) {
                if (a[i] > x) { pos = i; break; }
            }
            if (pos == -1) break;
            int temp = a[pos];
            a[pos] = x;
            x = temp;
            cnt++;
            if (check_sorted(a, n)) {
                done = 1;
                break;
            }
        }

        if (done) printf("%d\n", cnt);
        else printf("-1\n");
    }
    return 0;
}

