#include <stdio.h>
#include <string.h>

int adj[26][26];
int deg[26];
int used[26];
char s[205];
char layout[27];
int T;

int main() {
    scanf("%d", &T);
    while (T--) {
        scanf("%s", s);
        int n = strlen(s);
        memset(adj, 0, sizeof(adj));
        memset(deg, 0, sizeof(deg));
        memset(used, 0, sizeof(used));
        int ok = 1;
        for (int i = 1; i < n; i++) {
            int a = s[i - 1] - 'a';
            int b = s[i] - 'a';
            if (a == b) continue;
            if (!adj[a][b]) {
                adj[a][b] = adj[b][a] = 1;
                deg[a]++; deg[b]++;
                if (deg[a] > 2 || deg[b] > 2) ok = 0;
            }
        }
        if (!ok) {
            printf("NO\n");
            continue;
        }
        char left[27], right[27];
        int l = 0, r = 0;
        int start = -1;
        for (int i = 0; i < 26; i++)
            if (deg[i] == 1) { start = i; break; }
        if (start == -1) {
            int hasEdge = 0;
            for (int i = 0; i < 26; i++) if (deg[i]) hasEdge = 1;
            if (hasEdge) { printf("NO\n"); continue; }
        }
        int cur = start;
        int prev = -1;
        used[cur] = 1;
        right[r++] = 'a' + cur;
        while (1) {
            int next = -1;
            for (int i = 0; i < 26; i++)
                if (adj[cur][i] && i != prev) next = i;
            if (next == -1) break;
            prev = cur;
            cur = next;
            if (used[cur]) { ok = 0; break; }
            used[cur] = 1;
            right[r++] = 'a' + cur;
        }
        if (!ok) {
            printf("NO\n");
            continue;
        }
        int pos = 0;
        for (int i = l - 1; i >= 0; i--) layout[pos++] = left[i];
        for (int i = 0; i < r; i++) layout[pos++] = right[i];
        for (int i = 0; i < 26; i++)
            if (!used[i]) layout[pos++] = 'a' + i;
        layout[pos] = '\0';
        printf("YES\n%s\n", layout);
    }
    return 0;
}

