#include <stdio.h>
#include <math.h>

int count_lattice_points(int r) {
    int count = 0;
    int r2 = r * r;
    int r1_2 = (r + 1) * (r + 1);

    for (int y = 0; y <= r + 1; y++) {
        int x_min = (int)ceil(sqrt(fmax(0, r2 - y * y)));
        int x_max = (int)floor(sqrt(fmax(0, r1_2 - 1 - y * y)));

        if (x_max >= x_min) {
            if (y == 0)
                count += (x_max - x_min + 1) * 2;
            else
                count += (x_max - x_min + 1) * 4;
        }
    }

    return count;
}

int main() {
    int t;
    scanf("%d", &t);
    while (t--) {
        int r;
        scanf("%d", &r);
        printf("%d\n", count_lattice_points(r));
    }
    return 0;
}

