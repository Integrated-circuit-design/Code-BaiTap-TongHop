#include <stdio.h>

int main() {
    int t;
    scanf("%d", &t);

    while(t--) {
        int n;
        scanf("%d", &n);

        int top = 1, left = 1;
        int bottom = n, right = n;
        int count = 0;

        while(count < n) {
            if(count < n) {
                printf("%d %d\n", top, left);
                count++;
            }
            left++;

            if(count < n) {
                printf("%d %d\n", bottom, right);
                count++;
            }
            bottom--;
        }
    }

    return 0;
}

