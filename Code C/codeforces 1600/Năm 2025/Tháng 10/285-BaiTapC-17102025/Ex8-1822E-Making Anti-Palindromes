#include <stdio.h>
#include <string.h>

#define MAXN 200005

char s[MAXN];
int count[26];

int main() {
    int t;
    scanf("%d", &t);

    while(t--) {
        int n;
        scanf("%d %s", &n, s);

        for(int i = 0; i < 26; i++) count[i] = 0;
        for(int i = 0; i < n; i++) count[s[i]-'a']++;

        int possible = 1;
        for(int i = 0; i < 26; i++) {
            if(count[i] > (n+1)/2) {
                possible = 0;
                break;
            }
        }
        if(!possible) {
            printf("-1\n");
            continue;
        }

        int operations = 0;
        int half = n/2;
        for(int i = 0; i < half; i++) {
            if(s[i] == s[n-i-1]) {
                operations++;
            }
        }

        printf("%d\n", operations);
    }

    return 0;
}

