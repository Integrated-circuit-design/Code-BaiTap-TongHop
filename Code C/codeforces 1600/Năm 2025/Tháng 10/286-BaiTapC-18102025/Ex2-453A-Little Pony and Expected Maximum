#include <stdio.h>

int main() {
    int m, n;
    scanf("%d %d", &m, &n);

    double ans = 0.0;
    double prev = 0.0;
    double cur = 0.0;
    double ratio = 1.0 / m;

    for (int k = 1; k <= m; ++k) {
        cur = 1.0;
        double frac = (double)k / m;
        for (int i = 0; i < n; ++i) cur *= frac;

        double prob = cur - prev;
        ans += k * prob;
        prev = cur;
    }

    printf("%.12f\n", ans);
    return 0;
}
