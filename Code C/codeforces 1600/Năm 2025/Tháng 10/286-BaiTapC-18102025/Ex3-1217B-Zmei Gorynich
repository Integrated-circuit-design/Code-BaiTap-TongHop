#include <stdio.h>

typedef long long ll;

ll min_hits(int n, ll x) {
    ll d, h;
    ll max_cut = 0;
    ll best_diff = -1;

    for (int i = 0; i < n; i++) {
        scanf("%lld %lld", &d, &h);
        if (d >= x) max_cut = x;
        if (d - h > best_diff)
            best_diff = d - h;
        if (d > max_cut)
            max_cut = d;
    }

    if (max_cut >= x)
        return 1;
    if (best_diff <= 0)
        return -1;

    ll remain = x - max_cut;
    ll times = (remain + best_diff - 1) / best_diff;
    return times + 1;
}

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n;
        ll x;
        scanf("%d %lld", &n, &x);
        ll result = min_hits(n, x);
        printf("%lld\n", result);
    }

    return 0;
}
