#include <stdio.h>

#define ll long long
#define MAXN 200005

ll a[MAXN];

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n;
        ll k;
        scanf("%d %lld", &n, &k);

        for (int i = 0; i < n; i++) {
            scanf("%lld", &a[i]);
        }

        int len = (k + 1 < n) ? (k + 1) : n;

        ll current_sum = 0, max_sum = 0;

        for (int i = 0; i < len; i++) current_sum += a[i];
        max_sum = current_sum;

        for (int i = len; i < n; i++) {
            current_sum += a[i] - a[i - len];
            if (current_sum > max_sum)
                max_sum = current_sum;
        }

        ll result;
        if (k >= n) {
            result = max_sum + (ll)n * k - (ll)n * (n - 1) / 2;
        } else {
            result = max_sum + (ll)k * len - (ll)len * (len - 1) / 2;
        }

        printf("%lld\n", result);
    }

    return 0;
}

