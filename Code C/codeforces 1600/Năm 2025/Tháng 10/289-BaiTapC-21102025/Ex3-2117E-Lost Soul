#include <stdio.h>

#define MAXN 200005

int a[MAXN], b[MAXN];

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n;
        scanf("%d", &n);

        for (int i = 0; i < n; i++) scanf("%d", &a[i]);
        for (int i = 0; i < n; i++) scanf("%d", &b[i]);

        int matches = 0;

        for (int i = 0; i < n; i++) {
            if (a[i] == b[i]) matches++;
        }

        if (matches < n) matches++;

        printf("%d\n", matches);
    }

    return 0;
}

