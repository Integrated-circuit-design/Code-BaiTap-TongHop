#include <stdio.h>

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        long long n, x;
        scanf("%lld %lld", &n, &x);

        long long count = 0;

        for (long long k = 2; k < n; k++) {
            long long period = 2 * k - 2;
            long long pos_in_period = (n - 1) % period + 1;

            long long value;
            if (pos_in_period <= k) {
                value = pos_in_period;
            } else {
                value = 2 * k - pos_in_period;
            }

            if (value == x) {
                count++;
            }
        }

        printf("%lld\n", count);
    }

    return 0;
}

