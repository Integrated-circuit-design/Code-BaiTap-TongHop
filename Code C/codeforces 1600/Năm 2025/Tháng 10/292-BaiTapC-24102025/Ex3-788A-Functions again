#include <stdio.h>
#include <stdlib.h>
#define ll long long
#define max(a,b) ((a) > (b) ? (a) : (b))

int main() {
    int n;
    scanf("%d", &n);
    ll a[n];
    for (int i = 0; i < n; i++) scanf("%lld", &a[i]);

    ll diff[n - 1];
    for (int i = 0; i < n - 1; i++) {
        diff[i] = llabs(a[i + 1] - a[i]);
    }

    ll alt1[n - 1], alt2[n - 1];
    for (int i = 0; i < n - 1; i++) {
        if (i % 2 == 0) {
            alt1[i] = diff[i];
            alt2[i] = -diff[i];
        } else {
            alt1[i] = -diff[i];
            alt2[i] = diff[i];
        }
    }

    ll max1 = 0, cur1 = 0;
    ll max2 = 0, cur2 = 0;

    for (int i = 0; i < n - 1; i++) {
        cur1 = max(alt1[i], cur1 + alt1[i]);
        cur2 = max(alt2[i], cur2 + alt2[i]);
        max1 = max(max1, cur1);
        max2 = max(max2, cur2);
    }

    printf("%lld\n", max(max1, max2));
    return 0;
}

