#include <stdio.h>

long long fact(int n) {
    long long res = 1;
    for (int i = 2; i <= n; i++)
        res *= i;
    return res;
}

long long comb(int n, int k) {
    if (k > n) return 0;
    return fact(n) / (fact(k) * fact(n - k));
}

long long derange(int n) {
    if (n == 0) return 1;
    if (n == 1) return 0;
    long long D = 0;
    int sign = 1;
    for (int i = 0; i <= n; i++) {
        long long term = fact(n) / fact(i);
        if (sign) D += term;
        else D -= term;
        sign = !sign;
    }
    return D / fact(n);
}

int main() {
    int n, k;
    scanf("%d %d", &n, &k);

    long long ans = 0;
    for (int i = 0; i <= k; i++)
        ans += comb(n, i) * derange(i);

    printf("%lld\n", ans);
    return 0;
}

