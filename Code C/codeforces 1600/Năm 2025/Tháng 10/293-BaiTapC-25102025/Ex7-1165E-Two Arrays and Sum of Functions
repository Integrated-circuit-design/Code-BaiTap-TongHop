#include <stdio.h>

#define MOD 998244353

void swap(long long *x, long long *y) {
    long long t = *x;
    *x = *y;
    *y = t;
}

void sort_up(long long arr[], int n) {
    for (int i = 1; i < n; i++) {
        long long key = arr[i];
        int j = i - 1;
        while (j >= 0 && arr[j] > key) {
            arr[j + 1] = arr[j];
            j--;
        }
        arr[j + 1] = key;
    }
}

void sort_down(long long arr[], int n) {
    for (int i = 1; i < n; i++) {
        long long key = arr[i];
        int j = i - 1;
        while (j >= 0 && arr[j] < key) {
            arr[j + 1] = arr[j];
            j--;
        }
        arr[j + 1] = key;
    }
}

int main() {
    int n;
    scanf("%d", &n);

    long long a[200005], b[200005], weight[200005];

    for (int i = 0; i < n; i++)
        scanf("%lld", &a[i]);
    for (int i = 0; i < n; i++)
        scanf("%lld", &b[i]);

    for (int i = 0; i < n; i++) {
        weight[i] = a[i] * (long long)(i + 1) * (n - i);
    }

    sort_up(weight, n);
    sort_down(b, n);

    long long result = 0;
    for (int i = 0; i < n; i++) {
        long long A = weight[i] % MOD;
        long long B = b[i] % MOD;
        result = (result + A * B) % MOD;
    }

    printf("%lld\n", result);
    return 0;
}

