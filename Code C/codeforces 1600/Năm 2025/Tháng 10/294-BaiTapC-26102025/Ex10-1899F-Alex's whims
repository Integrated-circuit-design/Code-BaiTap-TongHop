#include <stdio.h>

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n, q;
        scanf("%d %d", &n, &q);

        for (int i = 2; i <= n; i++) {
            printf("1 %d\n", i);
        }

        for (int i = 0; i < q; i++) {
            int d;
            scanf("%d", &d);

            if (d == 2) {
                printf("-1 -1 -1\n");
            } else {
                printf("1 %d %d\n", n, d);
            }
        }
    }

    return 0;
}

