#include <stdio.h>
#include <string.h>

int main() {
    char s[205], t[205];
    scanf("%s %s", s, t);

    int n = strlen(s);
    int m = strlen(t);

    int left = 0, right = 0;
    int prefix[205];
    left = 0;
    for (int i = 0; i < n; i++) {
        if (left < m && s[i] == t[left]) left++;
        prefix[i] = left;
    }

    int suffix[205];
    right = m - 1;
    for (int i = n - 1; i >= 0; i--) {
        if (right >= 0 && s[i] == t[right]) right--;
        suffix[i] = m - 1 - right;
    }

    int ans = 0;
    int j = 0;
    for (int i = 0; i < n; i++) {
        while (j < n && (prefix[i - 1 < 0 ? 0 : i - 1] + suffix[j] < m)) j++;
        if (j < n) {
            if (i <= j) ans = (ans > j - i + 1) ? ans : j - i + 1;
        }
    }

    printf("%d\n", ans);
    return 0;
}

