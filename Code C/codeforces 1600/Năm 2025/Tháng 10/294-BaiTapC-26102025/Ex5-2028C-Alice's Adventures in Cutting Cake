#include <stdio.h>

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n, m;
        long long v;
        scanf("%d %d %lld", &n, &m, &v);

        long long a[200005];
        long long total = 0;
        for (int i = 0; i < n; i++) {
            scanf("%lld", &a[i]);
            total += a[i];
        }

        if (total < (long long)m * v) {
            printf("-1\n");
            continue;
        }

        long long parts[200005];
        int partCount = 0;
        long long tempSum = 0;

        for (int i = 0; i < n; i++) {
            tempSum += a[i];
            if (tempSum >= v) {
                parts[partCount++] = tempSum;
                tempSum = 0;
                if (partCount == m) break;
            }
        }

        if (partCount < m) {
            printf("-1\n");
        } else {
            long long alice = total;
            for (int i = 0; i < m; i++) {
                alice -= parts[i];
            }
            printf("%lld\n", alice);
        }
    }

    return 0;
}

