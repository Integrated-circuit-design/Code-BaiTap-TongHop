#include <stdio.h>

#define MAXN 100005
typedef long long ll;

int a[MAXN], b[MAXN];
int idx[MAXN];

void swap(int *x, int *y) {
    int t = *x;
    *x = *y;
    *y = t;
}

void sort_by_diff(int n) {
    for (int i = 0; i < n - 1; ++i) {
        for (int j = i + 1; j < n; ++j) {
            long long diff1 = (long long)a[idx[i]] - b[idx[i]];
            long long diff2 = (long long)a[idx[j]] - b[idx[j]];
            if (diff1 < diff2) {
                swap(&idx[i], &idx[j]);
            }
        }
    }
}

int main() {
    int n;
    scanf("%d", &n);

    for (int i = 0; i < n; ++i) {
        scanf("%d %d", &a[i], &b[i]);
        idx[i] = i;
    }

    sort_by_diff(n);

    ll total = 0;
    for (int i = 0; i < n; ++i) {
        int pos = i + 1;
        int id = idx[i];
        total += (ll)a[id] * (pos - 1) + (ll)b[id] * (n - pos);
    }

    printf("%lld\n", total);
    return 0;
}

