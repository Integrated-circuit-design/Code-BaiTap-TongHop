#include <stdio.h>

#define MAXN 300005
#define max(a,b) ((a)>(b)?(a):(b))
#define min(a,b) ((a)<(b)?(a):(b))

struct Seg { int l, r; } seg[MAXN];

int main() {
    int n;
    scanf("%d", &n);

    int max1L = -1, max2L = -1, idL = -1;
    int min1R = 1000000001, min2R = 1000000001, idR = -1;

    for (int i = 0; i < n; i++) {
        scanf("%d%d", &seg[i].l, &seg[i].r);

        if (seg[i].l > max1L) {
            max2L = max1L;
            max1L = seg[i].l;
            idL = i;
        } else if (seg[i].l > max2L)
            max2L = seg[i].l;

        if (seg[i].r < min1R) {
            min2R = min1R;
            min1R = seg[i].r;
            idR = i;
        } else if (seg[i].r < min2R)
            min2R = seg[i].r;
    }

    int ans = 0;
    for (int i = 0; i < n; i++) {
        int L = (i == idL ? max2L : max1L);
        int R = (i == idR ? min2R : min1R);
        if (R >= L)
            ans = max(ans, R - L);
    }

    printf("%d\n", ans);
    return 0;
}

