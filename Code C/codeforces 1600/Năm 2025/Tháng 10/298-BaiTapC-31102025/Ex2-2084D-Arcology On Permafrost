#include <stdio.h>

#define MAXN 200005
int a[MAXN];

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n, m, k;
        scanf("%d %d %d", &n, &m, &k);

        int r = n - m * k;
        int x = (k < r) ? k : r;

        int val = 0;
        for (int i = 0; i < n; ++i) {
            a[i] = val;
            val++;
            if (val == x) val = 0;
        }

        for (int i = 0; i < n; ++i) {
            printf("%d", a[i]);
            if (i < n - 1) printf(" ");
        }
        printf("\n");
    }

    return 0;
}

