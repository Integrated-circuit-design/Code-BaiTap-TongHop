#include <stdio.h>
#include <string.h>

#define MAXN 100005
char s[MAXN];
int leftG[MAXN], rightG[MAXN];

int main() {
    int n;
    scanf("%d", &n);
    scanf("%s", s);

    int totalG = 0;
    for (int i = 0; i < n; i++)
        if (s[i] == 'G') totalG++;

    if (totalG == 0) { 
        puts("0"); 
        return 0; 
    }
    if (totalG == n) { 
        printf("%d\n", n); 
        return 0; 
    }

    if (s[0] == 'G') leftG[0] = 1;
    for (int i = 1; i < n; i++) {
        if (s[i] == 'G') leftG[i] = leftG[i - 1] + 1;
        else leftG[i] = 0;
    }

    if (s[n - 1] == 'G') rightG[n - 1] = 1;
    for (int i = n - 2; i >= 0; i--) {
        if (s[i] == 'G') rightG[i] = rightG[i + 1] + 1;
        else rightG[i] = 0;
    }

    int ans = 0;
    for (int i = 0; i < n; i++) {
        if (s[i] == 'S') {
            int left = (i > 0) ? leftG[i - 1] : 0;
            int right = (i < n - 1) ? rightG[i + 1] : 0;
            int total = left + right;
            if (total < totalG) total++;
            if (total > ans) ans = total;
        } else {
            if (leftG[i] > ans) ans = leftG[i];
        }
    }

    printf("%d\n", ans);
    return 0;
}

