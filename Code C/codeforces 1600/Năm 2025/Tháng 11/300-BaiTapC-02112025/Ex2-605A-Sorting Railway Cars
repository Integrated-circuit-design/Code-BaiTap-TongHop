#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);
    int a[100001], index[100001];

    for (int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
        index[a[i]] = i;
    }

    int longest = 1, count = 1;

    for (int i = 2; i <= n; i++) {
        if (index[i] > index[i - 1]) {
            count++;
        } else {
            count = 1;
        }
        if (count > longest) longest = count;
    }

    int result = n - longest;
    printf("%d\n", result);
    return 0;
}

