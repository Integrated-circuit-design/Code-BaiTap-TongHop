#include <stdio.h>

int main() {
    int T;
    scanf("%d", &T);

    while (T--) {
        int n, k;
        scanf("%d %d", &n, &k);

        long long last;
        long long first_point = 0, kth_point = 0;

        for (int i = 0; i < n; i++) {
            scanf("%lld", &last);
            if (i == 0) first_point = last;
            if (i == k) kth_point = last;
        }

        long long x = (first_point + kth_point) / 2;
        printf("%lld\n", x);
    }

    return 0;
}

