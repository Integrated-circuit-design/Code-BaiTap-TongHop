#include <stdio.h>
#define MOD 1000000007

int main() {
    int n;
    scanf("%d", &n);

    int p[n + 1];
    for (int i = 1; i <= n; i++)
        scanf("%d", &p[i]);

    long long cnt[n + 2];
    for (int i = 1; i <= n + 1; i++)
        cnt[i] = 0;

    cnt[1] = 1;

    for (int i = 1; i <= n; i++) {
        long long moves = cnt[i] % MOD;
        cnt[i + 1] = (cnt[i + 1] + moves) % MOD;
        cnt[p[i]] = (cnt[p[i]] + moves) % MOD;
    }

    long long total = 0;
    for (int i = 1; i <= n; i++)
        total = (total + cnt[i]) % MOD;

    printf("%lld\n", total);
    return 0;
}

