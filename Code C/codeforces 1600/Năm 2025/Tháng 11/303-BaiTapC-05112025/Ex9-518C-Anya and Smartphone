#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, m, k;
    scanf("%d %d %d", &n, &m, &k);

    int *menu = (int*)malloc(n * sizeof(int));
    int *where = (int*)malloc((n + 1) * sizeof(int));

    for (int i = 0; i < n; i++) {
        scanf("%d", &menu[i]);
        where[menu[i]] = i;
    }

    long long ans = 0;
    for (int i = 0; i < m; i++) {
        int app;
        scanf("%d", &app);

        int idx = where[app];
        int page = idx / k;
        ans += page + 1;

        if (idx > 0) {
            int prev = menu[idx - 1];
            menu[idx - 1] = app;
            menu[idx] = prev;
            where[app] = idx - 1;
            where[prev] = idx;
        }
    }

    printf("%lld\n", ans);

    free(menu);
    free(where);
    return 0;
}

