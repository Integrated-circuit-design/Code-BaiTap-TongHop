#include <stdio.h>
#include <stdlib.h>

int query(int a, int b, int c) {
    printf("? %d %d %d\n", a, b, c);
    fflush(stdout);
    int res;
    if (scanf("%d", &res) != 1) exit(0);
    if (res == -1) exit(0);
    return res;
}

void answer(int a, int b, int c) {
    printf("! %d %d %d\n", a, b, c);
    fflush(stdout);
}

int main() {
    int t;
    if (scanf("%d", &t) != 1) return 0;

    while (t--) {
        int n;
        if (scanf("%d", &n) != 1) return 0;

        if (n == 3) {
            answer(1, 2, 3);
            continue;
        }

        int found = 0;

        for (int i = 1; i <= n && !found; i++) {
            for (int j = i + 1; j <= n && !found; j++) {
                for (int k = j + 1; k <= n && !found; k++) {
                    int p = query(i, j, k);
                    if (p == 0) {
                        answer(i, j, k);
                        found = 1;
                    }
                }
            }
        }
    }

    return 0;
}

