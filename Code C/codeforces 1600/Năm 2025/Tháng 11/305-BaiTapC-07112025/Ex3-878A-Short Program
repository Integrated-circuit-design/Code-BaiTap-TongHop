#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    char op;
    int x;
    int res0[10], res1[10];

    for (int i = 0; i < 10; i++) {
        res0[i] = 0;
        res1[i] = 1;
    }

    for (int t = 0; t < n; t++) {
        scanf(" %c %d", &op, &x);
        for (int i = 0; i < 10; i++) {
            int bit = (x >> i) & 1;
            if (op == '&') {
                res0[i] &= bit;
                res1[i] &= bit;
            } else if (op == '|') {
                res0[i] |= bit;
                res1[i] |= bit;
            } else if (op == '^') {
                res0[i] ^= bit;
                res1[i] ^= bit;
            }
        }
    }

    int and_mask = 1023, or_mask = 0, xor_mask = 0;

    for (int i = 0; i < 10; i++) {
        if (res0[i] == 0 && res1[i] == 0)
            and_mask ^= (1 << i);
        else if (res0[i] == 1 && res1[i] == 1)
            or_mask |= (1 << i);
        else if (res0[i] == 1 && res1[i] == 0)
            xor_mask |= (1 << i);
    }

    int cnt = 0;
    if (and_mask != 1023) cnt++;
    if (or_mask) cnt++;
    if (xor_mask) cnt++;
    printf("%d\n", cnt);

    if (and_mask != 1023) printf("& %d\n", and_mask);
    if (or_mask) printf("| %d\n", or_mask);
    if (xor_mask) printf("^ %d\n", xor_mask);

    return 0;
}

