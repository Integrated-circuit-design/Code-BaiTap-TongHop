#include <stdio.h>
#include <string.h>
#include <stdlib.h>

#define MAXN 1005
#define MAXW 1005
typedef long long ll;

int n, m, W;
int w[MAXN], b[MAXN];
int g[MAXN][MAXN], deg[MAXN];
int vis[MAXN];
int q[MAXN];

int comp[MAXN], compCnt = 0;
int compW[MAXN], compB[MAXN];
int compList[MAXN][MAXN], compSize[MAXN];

ll dp[MAXW];

void bfs(int start) {
    int front = 0, back = 0;
    q[back++] = start;
    vis[start] = 1;
    compCnt++;
    compSize[compCnt] = 0;
    compW[compCnt] = 0;
    compB[compCnt] = 0;

    while (front < back) {
        int u = q[front++];
        compList[compCnt][compSize[compCnt]++] = u;
        compW[compCnt] += w[u];
        compB[compCnt] += b[u];
        for (int i = 0; i < deg[u]; i++) {
            int v = g[u][i];
            if (!vis[v]) {
                vis[v] = 1;
                q[back++] = v;
            }
        }
    }
}

int main() {
    scanf("%d %d %d", &n, &m, &W);
    for (int i = 1; i <= n; i++) scanf("%d", &w[i]);
    for (int i = 1; i <= n; i++) scanf("%d", &b[i]);

    for (int i = 0; i < m; i++) {
        int x, y;
        scanf("%d %d", &x, &y);
        g[x][deg[x]++] = y;
        g[y][deg[y]++] = x;
    }

    for (int i = 1; i <= n; i++) {
        if (!vis[i]) bfs(i);
    }

    memset(dp, 0, sizeof(dp));
    for (int id = 1; id <= compCnt; id++) {
        ll next[MAXW];
        memcpy(next, dp, sizeof(dp));

        for (int cur = 0; cur <= W; cur++) {
            if (cur + compW[id] <= W) {
                ll val = dp[cur] + compB[id];
                if (val > next[cur + compW[id]])
                    next[cur + compW[id]] = val;
            }
        }

        for (int i = 0; i < compSize[id]; i++) {
            int u = compList[id][i];
            for (int cur = 0; cur <= W; cur++) {
                if (cur + w[u] <= W) {
                    ll val = dp[cur] + b[u];
                    if (val > next[cur + w[u]])
                        next[cur + w[u]] = val;
                }
            }
        }

        memcpy(dp, next, sizeof(dp));
    }

    ll ans = 0;
    for (int i = 0; i <= W; i++)
        if (dp[i] > ans) ans = dp[i];
    printf("%lld\n", ans);
    return 0;
}

