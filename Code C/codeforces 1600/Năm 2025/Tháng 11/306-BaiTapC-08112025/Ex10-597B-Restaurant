#include <stdio.h>
#include <stdlib.h>

int cmp_end(const void *a, const void *b) {
    int *x = (int*)a;
    int *y = (int*)b;
    if (x[1] == y[1])
        return x[0] - y[0];
    return x[1] - y[1];
}

int main() {
    int n;
    scanf("%d", &n);

    int (*orders)[2] = malloc(n * sizeof(int[2]));

    for (int i = 0; i < n; i++)
        scanf("%d %d", &orders[i][0], &orders[i][1]);

    qsort(orders, n, sizeof(int[2]), cmp_end);

    int count = 0;
    int last_end = -1000000001;

    for (int i = 0; i < n; i++) {
        if (orders[i][0] > last_end) {
            count++;
            last_end = orders[i][1];
        }
    }

    printf("%d\n", count);
    free(orders);
    return 0;
}

