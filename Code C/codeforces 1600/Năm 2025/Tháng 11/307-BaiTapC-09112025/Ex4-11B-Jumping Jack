#include <stdio.h>
#include <math.h>

int main() {
    long long x;
    scanf("%lld", &x);

    if (x < 0) x = -x;
    if (x == 0) {
        printf("0\n");
        return 0;
    }

    long long n = (long long)(sqrt(2 * x));
    if (n*(n+1)/2 < x) n++;

    while ( ((n*(n+1)/2 - x) % 2 != 0) ) {
        n++;
    }

    printf("%lld\n", n);
    return 0;
}

