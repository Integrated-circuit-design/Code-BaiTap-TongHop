#include <stdio.h>

typedef long long ll;
const ll MOD = 1000000009;

ll mod_pow(ll base, ll exp) {
    ll ans = 1;
    for (; exp > 0; exp /= 2) {
        if (exp & 1) ans = (ans * base) % MOD;
        base = (base * base) % MOD;
    }
    return ans;
}

int main() {
    ll n, m, k;
    scanf("%lld %lld %lld", &n, &m, &k);

    ll wrong = n - m;
    ll safe_correct = (n / k) * (k - 1);

    if (m <= safe_correct) {
        printf("%lld\n", m % MOD);
    } else {
        ll forced = m - safe_correct;
        ll double_score = (mod_pow(2, forced + 1) - 2 + MOD) % MOD;
        ll score = (double_score * k) % MOD;
        score = (score + (m - forced * k) % MOD) % MOD;
        printf("%lld\n", score);
    }

    return 0;
}

