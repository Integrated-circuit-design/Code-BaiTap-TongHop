#include <stdio.h>
#include <stdlib.h>

int cmp(const void *a, const void *b) {
    long long x = *(long long*)a;
    long long y = *(long long*)b;
    return (x > y) - (x < y);
}

int main() {
    int n;
    scanf("%d", &n);

    long long h[n], sorted[n];
    for (int i = 0; i < n; i++) {
        scanf("%lld", &h[i]);
        sorted[i] = h[i];
    }

    qsort(sorted, n, sizeof(long long), cmp);

    int blocks = 0;
    long long maxOrig = h[0];
    long long maxSorted = sorted[0];

    for (int i = 0; i < n; i++) {
        if (i > 0) {
            if (h[i] > maxOrig) maxOrig = h[i];
            if (sorted[i] > maxSorted) maxSorted = sorted[i];
        }

        if (maxOrig == maxSorted) {
            blocks++;
            if (i + 1 < n) {
                maxOrig = h[i + 1];
                maxSorted = sorted[i + 1];
            }
        }
    }

    printf("%d\n", blocks);
    return 0;
}

