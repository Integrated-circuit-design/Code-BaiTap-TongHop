#include <stdio.h>
#include <stdlib.h>
#include <limits.h>

#define MAX 200005
#define INF 1000000000000000000LL

typedef long long ll;

typedef struct {
    int l, r, cost;
} Voucher;

int cmpEnd(const void *a, const void *b) {
    Voucher *v1 = (Voucher*)a, *v2 = (Voucher*)b;
    return v1->r - v2->r;
}

Voucher v[MAX];
ll minCost[MAX];
int n, x;

int main() {
    scanf("%d %d", &n, &x);
    for (int i = 0; i < n; i++)
        scanf("%d %d %d", &v[i].l, &v[i].r, &v[i].cost);

    qsort(v, n, sizeof(Voucher), cmpEnd);

    for (int i = 0; i <= 200000; i++) minCost[i] = INF;

    ll ans = INF;

    for (int i = 0; i < n; i++) {
        int len = v[i].r - v[i].l + 1;
        int need = x - len;

        if (need > 0 && need <= 200000 && minCost[need] < INF) {
            ll total = v[i].cost + minCost[need];
            if (total < ans) ans = total;
        }

        if (v[i].cost < minCost[len]) minCost[len] = v[i].cost;
    }

    if (ans == INF) printf("-1\n");
    else printf("%lld\n", ans);

    return 0;
}

