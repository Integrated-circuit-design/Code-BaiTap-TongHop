#include <stdio.h>
#include <stdlib.h>

int cmp(const void *a, const void *b) {
    long long x = *(long long*)a;
    long long y = *(long long*)b;
    if (x < y) return -1;
    if (x > y) return 1;
    return 0;
}

int main() {
    int n;
    long long k;
    scanf("%d %lld", &n, &k);

    long long a[1000];
    for (int i = 0; i < n; i++) scanf("%lld", &a[i]);

    qsort(a, n, sizeof(long long), cmp);

    int extra = 0;

    for (int i = 0; i < n; i++) {
        while (a[i] > k) {
            k *= 2;
            extra++;
        }
        if (a[i] > k) k = a[i];
    }

    printf("%d\n", extra);
    return 0;
}

