#include <stdio.h>
#include <stdlib.h>

#define MAX_TIME 1000001

int main() {
    int n, m, k;
    scanf("%d %d %d", &n, &m, &k);

    int *a = (int*)malloc(n * sizeof(int));
    for(int i = 0; i < n; i++)
        scanf("%d", &a[i]);

    int *minute = (int*)calloc(MAX_TIME, sizeof(int));

    for(int i = 0; i < n; i++)
        minute[a[i]]++;

    int ans = 0;
    int windowSum = 0;

    for(int i = 1; i <= 1000000; i++) {
        windowSum += minute[i];

        if(i > m)
            windowSum -= minute[i - m];

        if(windowSum >= k) {
            int need = windowSum - (k-1);
            ans += need;
            minute[i] -= need;
            windowSum -= need;
        }
    }

    printf("%d\n", ans);

    free(a);
    free(minute);
    return 0;
}

