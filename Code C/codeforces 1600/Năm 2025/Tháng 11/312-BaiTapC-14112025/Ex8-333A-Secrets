#include <stdio.h>

int main() {
    long long n;
    scanf("%lld", &n);

    long long temp = n;
    long long power = 1;
    long long result = 0;

    while (temp > 0) {
        int digit = temp % 3;

        if (digit != 0) {
            long long coins = 0;
            long long x = n + 1;
            while (x > 0) {
                if (x % 3 == 1) coins++;
                x /= 3;
            }
            if (coins > result) result = coins;
        }

        temp /= 3;
        power *= 3;
    }

    printf("%lld\n", result);
    return 0;
}

