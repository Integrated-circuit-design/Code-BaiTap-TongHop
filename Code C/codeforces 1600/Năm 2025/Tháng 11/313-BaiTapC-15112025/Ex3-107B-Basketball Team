#include <stdio.h>

int main() {
    int n, m, h;
    scanf("%d %d %d", &n, &m, &h);

    int s[1010];
    int total = 0;
    for (int i = 1; i <= m; i++) {
        scanf("%d", &s[i]);
        total += s[i];
    }

    int sh = s[h];

    if (total < n) {
        printf("-1\n");
        return 0;
    }

    if (n == 1) {
        printf("0\n");
        return 0;
    }

    int choose = n - 1;
    int other = total - sh;

    long double probability = 0.0;

    for (int k = 1; k <= choose && k < sh; k++) {
        long double p = 1.0;
        for (int i = 0; i < k; i++)
            p *= (long double)(sh - 1 - i) / (i + 1);
        for (int i = 0; i < choose - k; i++)
            p *= (long double)(other - i) / (i + 1);

        long double denom = 1.0;
        for (int i = 0; i < choose; i++)
            denom *= (long double)(total - 1 - i) / (i + 1);

        probability += p / denom;
    }

    if (sh - 1 >= choose) probability = 1.0;

    printf("%.6Lf\n", probability);

    return 0;
}

