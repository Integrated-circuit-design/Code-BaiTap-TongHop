#include <stdio.h>

int main() {
    int n, k;
    scanf("%d %d", &n, &k);

    char s[n + 1];
    scanf("%s", s);

    int minDist = n;
    int start = 0;
    int end = 0;
    int freeCount = 0;

    while (end < n) {
        if (s[end] == '0') freeCount++;
        else freeCount = 0, start = end + 1;

        if (freeCount >= k + 1) {
            int mid = start + (k / 2);
            int distLeft = mid - start;
            int distRight = start + k - mid;
            int maxDist = distLeft > distRight ? distLeft : distRight;
            if (maxDist < minDist) minDist = maxDist;
            start++;
            freeCount--;
        }
        end++;
    }

    printf("%d\n", minDist);
    return 0;
}

