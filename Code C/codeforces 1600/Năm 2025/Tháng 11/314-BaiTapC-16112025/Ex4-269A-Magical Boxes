#include <stdio.h>
#include <stdlib.h>

typedef long long ll;

typedef struct {
    ll k;
    ll a;
} Box;

int main() {
    int n;
    scanf("%d", &n);

    Box *boxes = (Box*)malloc(n * sizeof(Box));
    ll minK = 1e18, maxK = -1;

    for (int i = 0; i < n; i++) {
        scanf("%lld %lld", &boxes[i].k, &boxes[i].a);
        if (boxes[i].k < minK) minK = boxes[i].k;
        if (boxes[i].k > maxK) maxK = boxes[i].k;
    }

    int len = maxK - minK + 100;
    ll *count = (ll*)calloc(len, sizeof(ll));

    for (int i = 0; i < n; i++) {
        count[boxes[i].k - minK] = boxes[i].a;
    }

    for (int i = 0; i < len - 1; i++) {
        ll carry = count[i] / 4;
        count[i] %= 4;
        count[i + 1] += carry;
    }

    int p;
    for (p = len - 1; p >= 0; p--) {
        if (count[p] > 0) break;
    }

    printf("%lld\n", minK + p);

    free(boxes);
    free(count);
    return 0;
}

