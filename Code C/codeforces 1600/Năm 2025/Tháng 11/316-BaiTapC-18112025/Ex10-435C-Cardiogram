#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int a[n];
    for (int i = 0; i < n; i++) scanf("%d", &a[i]);

    int y[n + 1];
    y[0] = 0;
    int maxY = 0, minY = 0;

    for (int i = 0; i < n; i++) {
        if (i % 2 == 0) y[i + 1] = y[i] - a[i];
        else y[i + 1] = y[i] + a[i];
        if (y[i + 1] > maxY) maxY = y[i + 1];
        if (y[i + 1] < minY) minY = y[i + 1];
    }

    int width = 0;
    for (int i = 0; i < n; i++) width += a[i];

    for (int row = maxY; row >= minY; row--) {
        int x = 0;
        for (int seg = 0; seg < n; seg++) {
            int len = a[seg];
            for (int k = 0; k < len; k++) {
                int curY;
                if (seg % 2 == 0) curY = y[seg] - k;
                else curY = y[seg] + k + 1;

                if (curY == row) {
                    if (seg % 2 == 0) putchar('/');
                    else putchar('\\');
                } else {
                    putchar(' ');
                }
                x++;
            }
        }
        putchar('\n');
    }

    return 0;
}

