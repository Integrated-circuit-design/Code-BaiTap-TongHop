#include <stdio.h>

int main() {
    long long k;
    scanf("%lld", &k);

    int n = 0;
    int groups[100];
    int g = 0;

    while (k > 0) {
        int t = 3;
        for (int i = 3; i <= 100; i++) {
            long long tri = 1LL * i * (i - 1) * (i - 2) / 6;
            if (tri > k) break;
            t = i;
        }
        k -= 1LL * t * (t - 1) * (t - 2) / 6;
        groups[g++] = t;
        n += t;
    }

    printf("%d\n", n);

    int start = 0;
    for (int i = 0; i < g; i++) {
        int t = groups[i];
        for (int u = start; u < start + t; u++) {
            for (int v = start; v < start + t; v++) {
                if (u == v) printf("0");
                else printf("1");
            }
            printf("\n");
        }
        start += t;
    }

    return 0;
}

