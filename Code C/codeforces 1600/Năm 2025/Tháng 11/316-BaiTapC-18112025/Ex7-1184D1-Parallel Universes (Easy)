#include <stdio.h>

typedef struct {
    int length;
    int doctorPos;
} Multiverse;

void addUniverse(Multiverse *uni, int pos) {
    if (pos <= uni->doctorPos) {
        uni->doctorPos++;
    }
    uni->length++;
}

void cutLink(Multiverse *uni, int link) {
    if (uni->doctorPos <= link) {
        uni->length = link;
    } else {
        uni->doctorPos -= link;
        uni->length -= link;
    }
}

int main() {
    int n, k, m, t;
    scanf("%d %d %d %d", &n, &k, &m, &t);

    Multiverse universe;
    universe.length = n;
    universe.doctorPos = k;

    for (int i = 0; i < t; i++) {
        int type, x;
        scanf("%d %d", &type, &x);

        if (type == 1) {
            addUniverse(&universe, x);
        } else {
            cutLink(&universe, x);
        }

        printf("%d %d\n", universe.length, universe.doctorPos);
    }

    return 0;
}

