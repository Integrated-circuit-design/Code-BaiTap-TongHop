#include <stdio.h>

#define MOD 1000000007

int main() {
    int n;
    scanf("%d", &n);

    long long red = 0, blue = 0;

    for (int i = 1; i <= n; i++) {
        if (i % 2 == 1) {
            red = (1 + blue) % MOD;
        } else {
            blue = (1 + red) % MOD;
        }
    }

    long long total = (red + blue) % MOD;
    printf("%lld\n", total);

    return 0;
}

