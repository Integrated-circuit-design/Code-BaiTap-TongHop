#include <stdio.h>
#include <string.h>

int main() {
    int n;
    scanf("%d", &n);

    int maxBit = 64;
    long long bit[maxBit];
    memset(bit, 0, sizeof(bit));

    for (int i = 0; i < n; i++) {
        int a;
        scanf("%d", &a);
        bit[a]++;
    }

    for (int i = 0; i < maxBit-1; i++) {
        if (bit[i] >= 2) {
            bit[i+1] += bit[i] / 2;
            bit[i] %= 2;
        }
    }

    int first = 0;
    while (first < maxBit && bit[first] == 0) first++;

    int last = maxBit-1;
    while (last >= 0 && bit[last] == 0) last--;

    int additions = 0;
    for (int i = first; i <= last; i++) {
        if (bit[i] == 0) additions++;
    }

    printf("%d\n", additions);

    return 0;
}

