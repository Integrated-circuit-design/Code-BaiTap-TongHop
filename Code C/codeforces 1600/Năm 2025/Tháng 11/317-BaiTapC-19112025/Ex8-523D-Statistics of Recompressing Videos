#include <stdio.h>

typedef long long ll;

int main() {
    int n, k;
    scanf("%d %d", &n, &k);

    ll upload_time, duration;
    ll server_time[500005];
    for(int i = 0; i < k; i++) server_time[i] = 0;

    for(int i = 0; i < n; i++) {
        scanf("%lld %lld", &upload_time, &duration);

        ll earliest = server_time[0];
        int chosen = 0;
        for(int j = 1; j < k; j++) {
            if(server_time[j] < earliest) {
                earliest = server_time[j];
                chosen = j;
            }
        }

        ll start_time = (upload_time > earliest) ? upload_time : earliest;
        ll finish_time = start_time + duration;

        printf("%lld\n", finish_time);

        server_time[chosen] = finish_time;
    }

    return 0;
}

