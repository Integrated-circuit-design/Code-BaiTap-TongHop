#include <stdio.h>
#include <string.h>

char s[105];
int n, k;

int main() {
    scanf("%d", &k);
    scanf("%s", s);
    n = strlen(s);

    int freq[26] = {0};
    for (int i = 0; i < n; i++) {
        if (s[i] != '?') freq[s[i]-'a']++;
    }

    for (int i = 0; i < n/2; i++) {
        int j = n-1-i;
        if (s[i] == '?' && s[j] == '?') continue;
        if (s[i] == '?') s[i] = s[j];
        else if (s[j] == '?') s[j] = s[i];
        else if (s[i] != s[j]) {
            printf("IMPOSSIBLE");
            return 0;
        }
    }

    int used[26] = {0};
    for (int i = 0; i < n; i++) if (s[i] != '?') used[s[i]-'a'] = 1;

    for (int i = 0; i < n/2; i++) {
        int j = n-1-i;
        if (s[i] == '?') {
            int placed = 0;
            for (int c = 0; c < k; c++) {
                if (!used[c]) {
                    s[i] = s[j] = 'a'+c;
                    used[c] = 1;
                    placed = 1;
                    break;
                }
            }
            if (!placed) s[i] = s[j] = 'a';
        }
    }

    if (n%2==1 && s[n/2]=='?') {
        for (int c=0;c<k;c++) {
            if (!used[c]) {
                s[n/2] = 'a'+c;
                used[c] = 1;
                break;
            }
        }
        if (s[n/2]=='?') s[n/2]='a';
    }

    for (int c=0;c<k;c++) if (!used[c]) {
        printf("IMPOSSIBLE");
        return 0;
    }

    printf("%s", s);
    return 0;
}

