#include <stdio.h>

int main() {
    int n, m;
    scanf("%d %d", &n, &m);

    char grid[1000][1001];
    for(int i = 0; i < n; i++) scanf("%s", grid[i]);

    long long total = 0;
    int colCount[1000];

    for(int j = 0; j < m; j++) colCount[j] = 0;

    for(int i = 0; i < n; i++) {
        int rowStars[m];
        int left = 0;

        for(int j = 0; j < m; j++) {
            if(grid[i][j] == '*') left++;
            else left = 0;
            rowStars[j] = left;
        }

        for(int j = 0; j < m; j++) {
            if(grid[i][j] == '*') {
                int right = 0;
                for(int k = j+1; k < m && grid[i][k]=='*'; k++) right++;

                int up = colCount[j];
                int down = 0;
                for(int k = i+1; k < n && grid[k][j]=='*'; k++) down++;

                long long h = (rowStars[j]-1) + right;
                long long v = up + down;

                total += h * v;
            }
        }

        for(int j = 0; j < m; j++) {
            if(grid[i][j] == '*') colCount[j]++;
            else colCount[j] = 0;
        }
    }

    printf("%lld\n", total);
    return 0;
}

