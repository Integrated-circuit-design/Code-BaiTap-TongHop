#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    long long s[205], d[205];
    long long start[205], finish[205];

    for(int i = 0; i < n; i++) {
        scanf("%lld %lld", &s[i], &d[i]);
    }

    int used[2000] = {0};
    long long max_day = 0;

    for(int i = 0; i < n; i++) {
        long long t = s[i];

        while(1) {
            int free = 1;
            for(long long j = t; j < t + d[i]; j++) {
                if(j <= max_day && used[j]) {
                    free = 0;
                    break;
                }
            }
            if(free) break;
            t++;
        }

        start[i] = t;
        finish[i] = t + d[i] - 1;

        for(long long j = start[i]; j <= finish[i]; j++) {
            if(j > max_day) max_day = j;
            if(j < 2000) used[j] = 1;
        }
    }

    for(int i = 0; i < n; i++) {
        printf("%lld %lld\n", start[i], finish[i]);
    }

    return 0;
}

