#include <stdio.h>
#include <math.h>

int main() {
    int n;
    double a, d;
    scanf("%d %lf %lf", &n, &a, &d);

    double prev = 0.0;

    for (int i = 0; i < n; i++) {
        double startTime, maxSpeed;
        scanf("%lf %lf", &startTime, &maxSpeed);

        double timeToMax = maxSpeed / a;
        double distToMax = 0.5 * a * timeToMax * timeToMax;
        double totalTime;

        if (distToMax >= d) {
            totalTime = sqrt(2.0 * d / a);
        } else {
            totalTime = timeToMax + (d - distToMax) / maxSpeed;
        }

        double arrival = startTime + totalTime;

        if (arrival < prev) arrival = prev;

        printf("%.10f\n", arrival);
        prev = arrival;
    }

    return 0;
}
