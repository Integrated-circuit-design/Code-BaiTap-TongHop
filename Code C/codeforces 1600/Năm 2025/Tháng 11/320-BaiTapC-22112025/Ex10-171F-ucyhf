#include <stdio.h>
#include <stdlib.h>

#define MAX 10000000

int main() {
    int n;
    scanf("%d", &n);

    char *is_prime = (char*)malloc((MAX+1) * sizeof(char));
    for(int i=0;i<=MAX;i++) is_prime[i] = 1;
    is_prime[0] = is_prime[1] = 0;

    for(int i=2;i*i<=MAX;i++) {
        if(is_prime[i]) {
            for(int j=i*i;j<=MAX;j+=i) {
                is_prime[j] = 0;
            }
        }
    }

    int count = 0;
    for(int i=2;i<=MAX;i++) {
        if(!is_prime[i]) continue;

        int num = i;
        int rev = 0;
        while(num > 0) {
            rev = rev*10 + (num % 10);
            num /= 10;
        }

        if(rev != i && rev <= MAX && is_prime[rev]) {
            count++;
            if(count == n) {
                printf("%d\n", i);
                free(is_prime);
                return 0;
            }
        }
    }

    printf("-1\n");
    free(is_prime);
    return 0;
}

