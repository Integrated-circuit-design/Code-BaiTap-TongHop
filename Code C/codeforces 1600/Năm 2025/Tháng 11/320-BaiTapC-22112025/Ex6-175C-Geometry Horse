#include <stdio.h>
#include <stdlib.h>

typedef long long ll;

int cmp_desc(const void *a, const void *b) {
    ll x = *(ll*)a;
    ll y = *(ll*)b;
    if (x < y) return -1;
    if (x > y) return 1;
    return 0;
}

int main() {
    int n;
    scanf("%d", &n);

    ll ki[105];
    ll ci[105];
    ll total = 0;

    for (int i = 0; i < n; i++) {
        scanf("%lld %lld", &ki[i], &ci[i]);
        total += ki[i];
    }

    int t;
    scanf("%d", &t);

    ll pi[105];
    for (int i = 0; i < t; i++) scanf("%lld", &pi[i]);

    typedef struct {
        ll count;
        ll value;
    } Flat;

    Flat figs[105];
    for (int i = 0; i < n; i++) {
        figs[i].count = ki[i];
        figs[i].value = ci[i];
    }

    qsort(figs, n, sizeof(Flat), cmp_desc);

    ll seg[105];
    for (int i = 0; i < t; i++) {
        seg[i] = pi[i] - (i==0?0:pi[i-1]);
    }
    seg[t] = total - pi[t-1];

    ll ans = 0;
    int idx = 0;

    for (int f = 1; f <= t+1; f++) {
        ll need = seg[f-1];
        while (need > 0 && idx < n) {
            ll take = figs[idx].count < need ? figs[idx].count : need;
            ans += take * figs[idx].value * f;
            figs[idx].count -= take;
            need -= take;
            if (figs[idx].count == 0) idx++;
        }
    }

    printf("%lld\n", ans);
    return 0;
}

