#include <stdio.h>

int main() {
    char room[6][9];
    
    for(int i = 0; i < 6; i++) {
        scanf("%s", room[i]);
    }

    int cols[6] = {0,1,3,4,6,7};
    int placed = 0;

    for(int j = 0; j < 6 && !placed; j++) {
        int c = cols[j];
        for(int i = 0; i < 6 && !placed; i++) {
            if(room[i][c] == '.') {
                room[i][c] = 'P';
                placed = 1;
            }
        }
    }

    for(int i = 0; i < 6; i++) {
        printf("%s\n", room[i]);
    }

    return 0;
}

