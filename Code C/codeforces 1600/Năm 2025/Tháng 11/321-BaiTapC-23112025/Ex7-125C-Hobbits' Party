#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    long long maxDays = 1LL * n * (n - 1) / 2;
    printf("%lld\n", maxDays);

    int index = 0;
    int pairs[n*(n-1)/2][2];

    for (int i = 1; i <= n; i++) {
        for (int j = i + 1; j <= n; j++) {
            pairs[index][0] = i;
            pairs[index][1] = j;
            index++;
        }
    }

    for (int i = 0; i < index; i++) {
        printf("%d %d\n", pairs[i][0], pairs[i][1]);
    }

    return 0;
}

