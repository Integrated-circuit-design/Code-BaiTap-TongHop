#include <stdio.h>

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n;
        scanf("%d", &n);

        long long a[n];
        for (int i = 0; i < n; i++)
            scanf("%lld", &a[i]);

        long long total = 0;

        for (int i = 0; i < n; ) {
            if (a[i] == 0) {
                i++;
                continue;
            }

            int j = i;
            while (j < n && a[j] > 0)
                j++;

            int len = j - i;
            long long segmentSum = 0;
            long long pairSum = 0;

            for (int k = i; k < j; k++)
                segmentSum += a[k];

            for (int k = i; k + 1 < j; k += 2)
                pairSum += a[k] + a[k + 1];

            total += segmentSum + pairSum;

            i = j;
        }

        printf("%lld\n", total);
    }

    return 0;
}

