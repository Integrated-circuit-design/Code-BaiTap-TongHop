#include <stdio.h>

#define MAXH 200005
#define MAXN 200005

typedef struct {
    long long id;
    int hash;
    int active;
} Object;

int h, m, n;
int table[MAXH];
Object objects[MAXN];
int obj_count = 0;

int main() {
    scanf("%d %d %d", &h, &m, &n);

    for (int i = 0; i < h; i++)
        table[i] = 0;

    long long total_dummy = 0;

    for (int i = 0; i < n; i++) {
        char op;
        scanf(" %c", &op);

        if (op == '+') {
            long long id;
            int hash;
            scanf("%lld %d", &id, &hash);

            int pos = hash;
            int dummy = 0;

            while (table[pos]) {
                pos = (pos + m) % h;
                dummy++;
            }

            table[pos] = 1;

            objects[obj_count].id = id;
            objects[obj_count].hash = pos;
            objects[obj_count].active = 1;
            obj_count++;

            total_dummy += dummy;

        } else if (op == '-') {
            long long id;
            scanf("%lld", &id);

            for (int j = 0; j < obj_count; j++) {
                if (objects[j].active && objects[j].id == id) {
                    int pos = objects[j].hash;
                    table[pos] = 0;
                    objects[j].active = 0;
                    break;
                }
            }
        }
    }

    printf("%lld\n", total_dummy);
    return 0;
}

