#include <stdio.h>

#define MAXN 250000

int n;
int a[MAXN + 5];

long long solve() {
    long long total = 0;
    
    int pos[MAXN + 5];
    for(int i = 0; i < n; i++) pos[i] = i;

    for(int m = 0; m < n; m++) {
        int steps = 0;
        int i = 0;

        while(i < n - 1) {
            int j = i + 1;

            while(j < n && j - i <= a[pos[j] + 1]) j++;

            i = j - 1;
            steps++;
        }

        total += steps;

        int last = pos[n-1];
        for(int k = n-1; k >= 1; k--) pos[k] = pos[k-1];
        pos[0] = last;
    }

    return total;
}

int main() {
    scanf("%d", &n);
    for(int i = 1; i <= n; i++) scanf("%d", &a[i]);

    long long ans = solve();
    printf("%lld\n", ans);
    return 0;
}

