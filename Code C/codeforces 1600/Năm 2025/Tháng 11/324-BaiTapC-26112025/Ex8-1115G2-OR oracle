#include <stdio.h>

void OR_oracle_alt(int x[], int N, int *y) {
    int sum = 0;
    for (int i = 0; i < N; i++) {
        sum += x[i];
    }
    int f = (sum > 0) ? 1 : 0;
    *y = (*y + f) % 2;
}

int main() {
    int N;
    printf("Nhap so luong qubit N (1-8): ");
    scanf("%d", &N);

    int x[8];
    int y;

    printf("Nhap %d qubit (0 hoac 1): ", N);
    for (int i = 0; i < N; i++) {
        scanf("%d", &x[i]);
    }

    printf("Nhap qubit y (0 hoac 1): ");
    scanf("%d", &y);

    OR_oracle_alt(x, N, &y);

    printf("Ket qua sau khi ap dung oracle:\n");
    printf("x: ");
    for (int i = 0; i < N; i++) {
        printf("%d ", x[i]);
    }
    printf("\ny: %d\n", y);

    return 0;
}

