#include <stdio.h>

int main() {
    int N;
    scanf("%d", &N);

    int size = 1 << N;

    for (int i = 0; i < size; i++) {
        for (int j = 0; j < size; j++) {
            if ( ((i >> 1) & 1) ^ ((j >> 1) & 1) )
                putchar('.');
            else
                putchar('X');
        }
        putchar('\n');
    }

    return 0;
}

