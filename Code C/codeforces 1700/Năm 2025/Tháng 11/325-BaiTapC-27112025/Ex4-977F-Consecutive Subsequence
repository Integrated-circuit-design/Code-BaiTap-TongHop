#include <stdio.h>
#include <stdlib.h>

int main() {
    int n;
    scanf("%d", &n);

    long long *a = (long long*)malloc(n * sizeof(long long));
    for (int i = 0; i < n; i++) scanf("%lld", &a[i]);

    int *prev = (int*)malloc(n * sizeof(int));
    for (int i = 0; i < n; i++) prev[i] = -1;

    typedef struct {
        long long val;
        int last_idx;
    } LastPos;

    LastPos *last = (LastPos*)malloc(n * sizeof(LastPos));
    int last_size = 0;

    int max_len = 0, end_idx = 0;

    for (int i = 0; i < n; i++) {
        int len = 1;
        int pred = -1;

        for (int j = 0; j < last_size; j++) {
            if (last[j].val == a[i]-1) {
                pred = last[j].last_idx;
                len = prev[pred] == -1 ? 2 : prev[pred]+1;
                len = (pred != -1) ? len : 1;
                break;
            }
        }

        prev[i] = pred;

        int found = 0;
        for (int j = 0; j < last_size; j++) {
            if (last[j].val == a[i]) {
                last[j].last_idx = i;
                found = 1;
                break;
            }
        }
        if (!found) {
            last[last_size].val = a[i];
            last[last_size].last_idx = i;
            last_size++;
        }

        int cnt = 1;
        int t = i;
        while (prev[t] != -1) {
            cnt++;
            t = prev[t];
        }
        if (cnt > max_len) {
            max_len = cnt;
            end_idx = i;
        }
    }

    printf("%d\n", max_len);

    int *indices = (int*)malloc(max_len * sizeof(int));
    int idx = max_len-1;
    int t = end_idx;
    while (t != -1) {
        indices[idx--] = t+1;
        t = prev[t];
    }

    for (int i = 0; i < max_len; i++) printf("%d ", indices[i]);
    printf("\n");

    free(a);
    free(prev);
    free(last);
    free(indices);
    return 0;
}

