#include <stdio.h>

#define MAXN 5005

long long a[MAXN];
long long pref[MAXN];
long long dp[MAXN];

int main() {
    int n, m, k;
    scanf("%d %d %d", &n, &m, &k);

    for (int i = 1; i <= n; i++) scanf("%lld", &a[i]);

    pref[0] = 0;
    for (int i = 1; i <= n; i++) pref[i] = pref[i-1] + a[i];

    long long dp_prev[MAXN] = {0};
    for (int j = 1; j <= k; j++) {
        for (int i = n; i >= m; i--) {
            long long segment = pref[i] - pref[i - m];
            long long candidate = dp_prev[i - m] + segment;
            if (candidate > dp[i]) dp[i] = candidate;
        }
        for (int i = 0; i <= n; i++) dp_prev[i] = dp[i];
    }

    long long answer = 0;
    for (int i = 0; i <= n; i++) {
        if (dp[i] > answer) answer = dp[i];
    }

    printf("%lld\n", answer);
    return 0;
}

