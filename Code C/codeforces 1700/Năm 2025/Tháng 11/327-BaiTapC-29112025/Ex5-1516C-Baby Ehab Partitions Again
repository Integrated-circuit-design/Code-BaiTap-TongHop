#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int a[105];
    for (int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    int min_val = a[0], min_idx = 0;
    for (int i = 1; i < n; i++) {
        if (a[i] < min_val) {
            min_val = a[i];
            min_idx = i;
        }
    }

    int sum = 0;
    for (int i = 0; i < n; i++) sum += a[i];

    if (sum % 2 == 1) {
        printf("0\n");
    } else {
        printf("1\n%d\n", min_idx + 1);
    }

    return 0;
}

