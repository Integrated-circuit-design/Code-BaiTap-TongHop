#include <stdio.h>

#define MAXN 1005
#define MAXM 1005

char museum[MAXN][MAXM];
int comp[MAXN][MAXM];
int pictures[MAXN * MAXM];
int n, m, k;

int dx[4] = {1, -1, 0, 0};
int dy[4] = {0, 0, 1, -1};

int dfs(int x, int y, int id) {
    comp[x][y] = id;
    int count = 0;

    for (int d = 0; d < 4; d++) {
        int nx = x + dx[d];
        int ny = y + dy[d];

        if (nx < 0 || nx >= n || ny < 0 || ny >= m) continue;

        if (museum[nx][ny] == '*') count++;
        else if (museum[nx][ny] == '.' && comp[nx][ny] == 0) {
            count += dfs(nx, ny, id);
        }
    }
    return count;
}

int main() {
    scanf("%d %d %d", &n, &m, &k);
    for (int i = 0; i < n; i++) scanf("%s", museum[i]);

    int cid = 0;

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            if (museum[i][j] == '.' && comp[i][j] == 0) {
                cid++;
                pictures[cid] = dfs(i, j, cid);
            }
        }
    }

    for (int i = 0; i < k; i++) {
        int x, y;
        scanf("%d %d", &x, &y);
        x--; y--;
        printf("%d\n", pictures[comp[x][y]]);
    }

    return 0;
}

