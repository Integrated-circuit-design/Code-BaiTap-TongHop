#include <stdio.h>
#include <stdlib.h>

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n;
        scanf("%d", &n);
        long long a[n];
        for (int i = 0; i < n; i++) {
            scanf("%lld", &a[i]);
        }

        long long diff[n];
        diff[0] = a[0];
        for (int i = 1; i < n; i++) {
            diff[i] = a[i] - a[i - 1];
        }

        long long ans = 0;
        for (int i = 0; i < n; i++) {
            ans += llabs(diff[i]);
        }

        printf("%lld\n", ans);
    }

    return 0;
}

