#include <stdio.h>

int a[300005];

int check(int i, int n) {
    if(i <= 1 || i >= n) return 0;
    if(a[i] > a[i-1] && a[i] > a[i+1]) return 1;
    if(a[i] < a[i-1] && a[i] < a[i+1]) return 1;
    return 0;
}

int main() {
    int t;
    scanf("%d", &t);

    while(t--) {
        int n;
        scanf("%d", &n);
        for(int i = 1; i <= n; i++) scanf("%d", &a[i]);

        if(n <= 2) {
            printf("0\n");
            continue;
        }

        int total = 0;
        for(int i = 2; i < n; i++) total += check(i, n);

        int ans = total;

        for(int i = 2; i < n; i++) {
            int old = a[i];
            int candidates[2] = {a[i-1], a[i+1]};

            for(int k = 0; k < 2; k++) {
                a[i] = candidates[k];
                int cnt = total;

                for(int j = i-1; j <= i+1; j++) cnt -= check(j, n);
                for(int j = i-1; j <= i+1; j++) cnt += check(j, n);

                if(cnt < ans) ans = cnt;
            }

            a[i] = old;
        }

        printf("%d\n", ans);
    }

    return 0;
}

