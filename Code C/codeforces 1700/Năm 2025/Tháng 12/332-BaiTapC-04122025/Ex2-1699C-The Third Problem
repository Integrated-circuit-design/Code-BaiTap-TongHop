#include <stdio.h>

#define MODULO 1000000007LL

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n;
        scanf("%d", &n);

        int arr[n];
        int where[n];

        for (int i = 0; i < n; i++) {
            scanf("%d", &arr[i]);
            where[arr[i]] = i;
        }

        int minPos = where[0];
        int maxPos = where[0];

        long long result = 1;

        for (int val = 1; val < n; val++) {
            int pos = where[val];

            if (pos >= minPos && pos <= maxPos) {
                int length = maxPos - minPos + 1;
                int used = val;
                int empty = length - used;

                if (empty > 0) {
                    result = (result * empty) % MODULO;
                }
            }

            if (pos < minPos) minPos = pos;
            if (pos > maxPos) maxPos = pos;
        }

        printf("%lld\n", result);
    }

    return 0;
}

