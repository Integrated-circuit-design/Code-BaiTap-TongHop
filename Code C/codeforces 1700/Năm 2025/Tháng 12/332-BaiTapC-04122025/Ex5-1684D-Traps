#include <stdio.h>

typedef struct {
    long long gain;
} Info;

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {

        int n, k;
        scanf("%d %d", &n, &k);

        long long a[200005];
        Info arr[200005];
        long long sum = 0;

        for (int i = 0; i < n; i++) {
            scanf("%lld", &a[i]);
            sum += a[i];
        }

        for (int i = 0; i < n; i++) {
            arr[i].gain = a[i] - (n - i - 1);
        }

        for (int i = 0; i < n - 1; i++) {
            int swapped = 0;
            for (int j = 0; j < n - 1 - i; j++) {
                if (arr[j].gain < arr[j + 1].gain) {
                    Info tmp = arr[j];
                    arr[j] = arr[j + 1];
                    arr[j + 1] = tmp;
                    swapped = 1;
                }
            }
            if (!swapped) break;
        }

        for (int i = 0; i < k; i++) {
            if (arr[i].gain > 0)
                sum -= arr[i].gain;
            else
                break;
        }

        printf("%lld\n", sum);
    }

    return 0;
}

