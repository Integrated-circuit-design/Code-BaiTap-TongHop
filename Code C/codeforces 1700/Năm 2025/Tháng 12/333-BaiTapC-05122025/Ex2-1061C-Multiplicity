#include <stdio.h>
#include <string.h>

#define MOD 1000000007
#define MAXN 100005

int main() {
    int n;
    scanf("%d", &n);

    int a[MAXN];
    for(int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    long long dp[MAXN];
    long long next[MAXN];
    memset(dp, 0, sizeof(dp));

    for(int j = 0; j < n; j++) {
        int x = a[j];

        memcpy(next, dp, sizeof(dp));

        for(int len = 1; len <= n; len++) {
            if(x % len == 0) {
                next[len] = (next[len] + dp[len - 1]) % MOD;
            }
        }

        next[1] = (next[1] + 1) % MOD;

        memcpy(dp, next, sizeof(next));
    }

    long long ans = 0;
    for(int i = 1; i <= n; i++) {
        ans = (ans + dp[i]) % MOD;
    }

    printf("%lld\n", ans);
    return 0;
}

