#include <stdio.h>

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n;
        scanf("%d", &n);

        int ops[2*(n+5)][2];
        int m = 0;

        int x = n;
        int y = n - 1;

        while (x > 2) {
            ops[m][0] = x;
            ops[m][1] = y;
            m++;
            x = (x + y - 1) / y;
        }

        for (int i = n - 1; i >= 1; i--) {
            if (i != y) {
                ops[m][0] = i;
                ops[m][1] = x;
                m++;
            }
        }

        printf("%d\n", m);
        for (int i = 0; i < m; i++) {
            printf("%d %d\n", ops[i][0], ops[i][1]);
        }
    }
    return 0;
}

