#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int a[n];
    for (int i = 0; i < n; ++i) scanf("%d", &a[i]);

    long long coins = 0;
    int insideZero = 0;
    int hasEnergy = 0;

    for (int i = 0; i < n; ++i) {
        if (a[i] == 0) {
            if (!insideZero) {
                insideZero = 1;
                hasEnergy = 0;
                if (i > 0 && a[i-1] > 0) hasEnergy = 1;
            }
        } else {
            if (insideZero) {
                if (a[i] > 0) hasEnergy = 1;
                if (!hasEnergy) coins++;
                insideZero = 0;
            }
        }
    }

    if (insideZero && !hasEnergy) coins++;

    printf("%lld\n", coins);
    return 0;
}

