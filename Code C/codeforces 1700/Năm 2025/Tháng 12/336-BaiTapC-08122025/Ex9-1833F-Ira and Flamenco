#include <stdio.h>
#include <stdlib.h>

#define MAXN 200005
#define MOD 1000000007

typedef struct {
    long long level;
    long long count;
} Level;

int cmp(const void *a, const void *b) {
    Level *x = (Level*)a;
    Level *y = (Level*)b;
    if(x->level < y->level) return -1;
    else if(x->level > y->level) return 1;
    return 0;
}

long long comb_small(int n, int k) {
    if(k>n) return 0;
    long long res=1;
    for(int i=0;i<k;i++) {
        res = res*(n-i)/(i+1);
    }
    return res;
}

int main() {
    int t;
    scanf("%d",&t);
    while(t--) {
        int n, m;
        scanf("%d %d",&n,&m);
        long long a[MAXN];
        for(int i=0;i<n;i++) scanf("%lld",&a[i]);

        qsort(a, n, sizeof(long long), (__compar_fn_t)cmp);

        Level levels[MAXN];
        int k=0;
        for(int i=0;i<n;) {
            long long val = a[i];
            long long cnt=0;
            while(i<n && a[i]==val) {
                cnt++; i++;
            }
            levels[k].level = val;
            levels[k].count = cnt;
            k++;
        }

        long long ans=0;

        for(int l=0; l<k; l++) {
            int r=l;
            long long prod=1;
            int len=0;
            while(r<k && levels[r].level - levels[l].level < m) {
                prod = (prod * levels[r].count) % MOD;
                len++;
                r++;
            }

            if(len >= m) {
                long long ways = comb_small(len, m);
                ans = (ans + ways * prod % MOD) % MOD;
            }
        }

        printf("%lld\n",ans);
    }
    return 0;
}

