#include <stdio.h>
#include <stdlib.h>

int cmp(const void *x, const void *y) {
    return (*(int*)x - *(int*)y);
}

int main() {
    int n;
    scanf("%d", &n);

    int a[n], b[n], c[n];

    for (int i = 0; i < n; i++) scanf("%d", &a[i]);
    for (int i = 0; i < n; i++) scanf("%d", &b[i]);

    qsort(b, n, sizeof(int), cmp);

    int used[n];
    for (int i = 0; i < n; i++) used[i] = 0;

    for (int i = 0; i < n; i++) {
        int best_index = -1;
        int best_value = n;

        for (int j = 0; j < n; j++) {
            if (used[j]) continue;

            int val = (a[i] + b[j]) % n;

            if (val < best_value) {
                best_value = val;
                best_index = j;
            }

            if (best_value == 0) break;
        }

        c[i] = best_value;
        used[best_index] = 1;
    }

    for (int i = 0; i < n; i++) {
        printf("%d", c[i]);
        if (i < n - 1) printf(" ");
    }
    printf("\n");

    return 0;
}

