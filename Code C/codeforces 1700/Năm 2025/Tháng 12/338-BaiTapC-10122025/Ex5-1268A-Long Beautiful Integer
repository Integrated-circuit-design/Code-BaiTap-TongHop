#include <stdio.h>

int main() {
    int n, k;
    scanf("%d %d", &n, &k);

    int x[n];
    for (int i = 0; i < n; i++) {
        char c;
        scanf(" %c", &c);
        x[i] = c - '0';
    }

    int y[n+1];
    for (int i = 0; i < n; i++) y[i] = x[i];

    for (int i = k; i < n; i++) {
        y[i] = y[i - k];
    }

    int smaller = 0;
    for (int i = 0; i < n; i++) {
        if (y[i] < x[i]) { smaller = 1; break; }
        if (y[i] > x[i]) break;
    }

    if (smaller) {
        int carry = 1;
        for (int i = k-1; i >= 0; i--) {
            int sum = y[i] + carry;
            y[i] = sum % 10;
            carry = sum / 10;
        }

        if (carry) {
            printf("%d\n", n+1);
            printf("1");
            for (int i = 0; i < n; i++) printf("0");
            printf("\n");
            return 0;
        }

        for (int i = k; i < n; i++) {
            y[i] = y[i - k];
        }
    }

    printf("%d\n", n);
    for (int i = 0; i < n; i++) printf("%d", y[i]);
    printf("\n");

    return 0;
}

