#include <stdio.h>
#include <string.h>

#define MAX 100005

char s[MAX], u[2*MAX];
char stack[MAX];
int top = -1;

int main() {
    scanf("%s", s);
    int n = strlen(s);

    int count[26] = {0};
    for (int i = 0; i < n; i++) {
        count[s[i]-'a']++;
    }

    int u_len = 0;

    for (int i = 0; i < n; i++) {
        char c = s[i];
        stack[++top] = c;
        count[c-'a']--;

        while (top >= 0) {
            int can_pop = 1;
            for (int j = 0; j < stack[top]-'a'; j++) {
                if (count[j] > 0) {
                    can_pop = 0;
                    break;
                }
            }
            if (can_pop) {
                u[u_len++] = stack[top--];
            } else {
                break;
            }
        }
    }

    while (top >= 0) {
        u[u_len++] = stack[top--];
    }

    u[u_len] = '\0';
    printf("%s\n", u);
    return 0;
}

