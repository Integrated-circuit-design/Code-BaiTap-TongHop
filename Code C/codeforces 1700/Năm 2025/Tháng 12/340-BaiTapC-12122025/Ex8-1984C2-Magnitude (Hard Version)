#include <stdio.h>

#define MOD 998244353

long long fastpow(long long base, long long exp) {
    long long val = 1;
    while (exp) {
        if (exp & 1) {
            val = (val * base) % MOD;
        }
        base = (base * base) % MOD;
        exp >>= 1;
    }
    return val;
}

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n;
        scanf("%d", &n);

        long long current = 0;
        long long choices = 0;
        long long v;

        for (int i = 0; i < n; i++) {
            scanf("%lld", &v);

            long long attempt = current + v;

            if (attempt >= 0) {
                choices++;
                current = attempt;
            } else {
                current = -attempt;
            }
        }

        long long res = fastpow(2, choices);
        printf("%lld\n", res);
    }

    return 0;
}

