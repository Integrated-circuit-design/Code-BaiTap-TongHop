#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int k = n / 2; 
    printf("%d\n", k);

    if (n % 2 == 0) {
        for (int i = 0; i < k; i++) {
            printf("2 ");
        }
    } else {
        printf("3 ");
        for (int i = 1; i < k; i++) {
            printf("2 ");
        }
    }

    return 0;
}

