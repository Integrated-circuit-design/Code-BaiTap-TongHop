#include <stdio.h>

int tim_tang(int n, int x) {
    if (n <= 2) {
        return 1;  
    } else {
        return (n - 3) / x + 2;
    }
}

int main() {
    int t;
    scanf("%d", &t);

    for (int i = 0; i < t; i++) {
        int n, x;
        scanf("%d %d", &n, &x);
        printf("%d\n", tim_tang(n, x));  
    }
    
    return 0;
}

