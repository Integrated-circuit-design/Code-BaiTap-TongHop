#include <stdio.h>

int main() {
    long long test_cases;
    scanf("%lld", &test_cases);

    for (long long i = 0; i < test_cases; i++) {
        long long length, total;
        scanf("%lld %lld", &length, &total);

        if (length == 1) {
            printf("0\n");
        } else if (length == 2) {
            printf("%lld\n", total);
        } else {
            printf("%lld\n", 2 * total);
        }
    }

    return 0;
}

