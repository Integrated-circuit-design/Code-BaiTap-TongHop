#include <stdio.h>

int main() {
    int numberOfTestCases;
    scanf("%d", &numberOfTestCases);

    for (int i = 0; i < numberOfTestCases; i++) {
        int rows, columns;
        scanf("%d %d", &rows, &columns);

        int totalCells = rows * columns; 
        int requiredLanterns = (totalCells + 1) / 2;  
        printf("%d\n", requiredLanterns);  
    }
    
    return 0;
}

