#include <stdio.h>

int main() {
    int testCases;
    scanf("%d", &testCases);

    for (int i = 0; i < testCases; i++) {
        int gridSize, minDiagonals;
        scanf("%d %d", &gridSize, &minDiagonals);

        int minCells = (minDiagonals + 1) / 2;

        printf("%d\n", minCells);
    }

    return 0;
}

