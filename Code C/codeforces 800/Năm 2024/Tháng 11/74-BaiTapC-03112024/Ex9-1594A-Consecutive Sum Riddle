#include <stdio.h>

int main() {
    int test_cases;
    scanf("%d", &test_cases);
    
    for (int i = 0; i < test_cases; i++) {
        long long number;
        scanf("%lld", &number);
        
        long long left = -number + 1;
        long long right = number;
        
        printf("%lld %lld\n", left, right);
    }
    
    return 0;
}

