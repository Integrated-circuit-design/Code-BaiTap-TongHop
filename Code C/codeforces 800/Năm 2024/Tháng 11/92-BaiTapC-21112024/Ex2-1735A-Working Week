#include <stdio.h>

int calculate_max_difference(long long n) {
    long long remainder = n % 3;
    if (remainder == 0) {
        return 0;
    }
    return 1;
}

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        long long n;
        scanf("%lld", &n);

        printf("%d\n", calculate_max_difference(n));
    }

    return 0;
}

