#include <stdio.h>

void solve() {
    int t;
    scanf("%d", &t);
    
    while (t--) {
        int n, k;
        scanf("%d %d", &n, &k);
        
        int valid = 1;
        
        if (k % 2 == 0) {
            printf("YES\n");
            for (int i = 1; i <= n; i += 2) {
                printf("%d %d\n", i, i + 1);
            }
        } else {
            printf("NO\n");
        }
    }
}

int main() {
    solve();
    return 0;
}

