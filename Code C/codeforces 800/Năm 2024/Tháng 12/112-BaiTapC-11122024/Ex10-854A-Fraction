from math import gcd

def find_max_fraction(n):
    max_numerator = 0
    max_denominator = 0
    max_fraction = 0

    for a in range(1, n):
        b = n - a
        if a < b and gcd(a, b) == 1:
            if a / b > max_fraction:
                max_fraction = a / b
                max_numerator = a
                max_denominator = b

    return max_numerator, max_denominator

n = int(input())

numerator, denominator = find_max_fraction(n)
print(numerator, denominator)

