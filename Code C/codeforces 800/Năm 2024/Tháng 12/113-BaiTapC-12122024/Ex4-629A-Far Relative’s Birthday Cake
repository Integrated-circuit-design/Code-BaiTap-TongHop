#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    char cake[n][n];

    for (int i = 0; i < n; i++) {
        scanf("%s", cake[i]);
    }

    int happiness = 0;

    for (int i = 0; i < n; i++) {
        int count = 0;
        for (int j = 0; j < n; j++) {
            if (cake[i][j] == 'C') {
                count++;
            }
        }
        happiness += (count * (count - 1)) / 2;
    }

    for (int j = 0; j < n; j++) {
        int count = 0;
        for (int i = 0; i < n; i++) {
            if (cake[i][j] == 'C') {
                count++;
            }
        }
        happiness += (count * (count - 1)) / 2;
    }

    printf("%d\n", happiness);

    return 0;
}

