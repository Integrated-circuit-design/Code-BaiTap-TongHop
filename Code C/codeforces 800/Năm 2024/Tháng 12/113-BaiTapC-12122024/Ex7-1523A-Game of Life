#include <stdio.h>
#include <string.h>

#define MAX_N 10004

void evolve(char *state, int n, int m) {
    char next[MAX_N];
    int iterations = 0;

    while (m-- > 0) {
        int stable = 1;
        strcpy(next, state);

        for (int i = 0; i < n; i++) {
            int left = (i > 0) ? state[i - 1] - '0' : 0;
            int right = (i < n - 1) ? state[i + 1] - '0' : 0;

            if (state[i] == '0' && left + right == 1) {
                next[i] = '1';
                stable = 0;
            }
        }

        strcpy(state, next);
        iterations++;
        if (stable) break;
    }
}

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n, m;
        char state[MAX_N];

        scanf("%d %d", &n, &m);
        scanf("%s", state);

        evolve(state, n, m);
        printf("%s\n", state);
    }

    return 0;
}

