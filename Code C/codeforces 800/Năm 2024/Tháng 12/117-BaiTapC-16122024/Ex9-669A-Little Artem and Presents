#include <stdio.h>

int main() {
    long long n;
    scanf("%lld", &n);
    
    long long count = 0;
    
    while (n > 0) {
        count++;
        
        if (n > 1) {
            n -= 2;
        } else {
            n -= 1;
        }
    }
    
    printf("%lld\n", count);
    
    return 0;
}

