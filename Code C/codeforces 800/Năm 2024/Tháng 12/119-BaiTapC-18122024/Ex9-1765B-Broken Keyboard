def can_type_on_broken_keyboard(t, test_cases):
    results = []
    for case in test_cases:
        n, s = case

        i = 0
        valid = True

        while i < n:
            char = s[i]

            while i < n and s[i] == char:
                i += 1

            if i < n and s[i] == char:
                valid = False
                break

        results.append("YES" if valid else "NO")
    
    return results

t = int(input())
test_cases = []
for _ in range(t):
    n = int(input())
    s = input()
    test_cases.append((n, s))

results = can_type_on_broken_keyboard(t, test_cases)
print("\n".join(results))

