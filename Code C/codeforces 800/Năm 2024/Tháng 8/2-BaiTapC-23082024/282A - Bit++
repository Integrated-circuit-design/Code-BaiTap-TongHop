#include <stdio.h>
int main() {
    int n;
    int x = 0; 
    scanf("%d", &n);
    for (int i = 0; i < n; i++) {
        char statement[4]; 
        scanf("%s", statement); 
        if (statement[0] == '+' || statement[1] == '+') {
            x++; 
        } else if (statement[0] == '-' || statement[1] == '-') {
            x--; 
        }
    }
    printf("%d\n", x);
    return 0;
}
