#include <stdio.h>

int main() {
    int t;
    scanf("%d", &t);
    
    for (int i = 0; i < t; i++) {
        int n, m, k;
        scanf("%d %d %d", &n, &m, &k);
        
        if (m == 1 || k >= n - 1) {
            printf("NO\n");
        } else {
            printf("YES\n");
        }
    }

    return 0;
}

