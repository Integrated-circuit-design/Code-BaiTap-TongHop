#include <stdio.h>

int main() {
    int t;
    scanf("%d", &t);
    
    while (t--) {
        long long x, y;
        scanf("%lld %lld", &x, &y);
        
        long long diff = x - y;
        
        if (diff > 1) {
            printf("YES\n");
        } else {
            printf("NO\n");
        }
    }

    return 0;
}

